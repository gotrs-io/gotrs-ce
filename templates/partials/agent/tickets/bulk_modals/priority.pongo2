{# Bulk Priority Change Modal with Synthwave Styling #}

<div id="bulk-priority-modal" class="fixed inset-0 z-50 hidden overflow-y-auto" aria-labelledby="modal-title" role="dialog" aria-modal="true">
    <div class="flex items-end justify-center min-h-screen pt-4 px-4 pb-20 text-center sm:block sm:p-0">
        <div class="fixed inset-0 transition-opacity" style="background: rgba(0, 0, 0, 0.8);" onclick="closeModal('bulk-priority-modal')"></div>
        <span class="hidden sm:inline-block sm:align-middle sm:h-screen">&#8203;</span>
        <div class="inline-block align-bottom rounded-lg text-left overflow-hidden shadow-xl transform transition-all sm:my-8 sm:align-middle sm:max-w-lg sm:w-full" style="background: var(--gk-bg-surface); border: 1px solid var(--gk-border-strong);">
            <form id="bulk-priority-form" onsubmit="submitBulkPriority(event)">
                <div class="px-4 pt-5 pb-4 sm:p-6 sm:pb-4">
                    <h3 class="text-lg font-medium mb-4" style="color: var(--gk-text-primary);">{{ t("bulk_actions.change_priority_title") }}</h3>
                    <p class="text-sm mb-4" style="color: var(--gk-text-muted);">
                        <span id="priority-ticket-count">0</span> {{ t("bulk_actions.tickets_selected") }}
                    </p>
                    <div>
                        <label class="block text-sm font-medium mb-1" style="color: var(--gk-text-secondary);">{{ t("bulk_actions.new_priority") }}</label>
                        <select id="bulk-priority-select" name="priority_id" required class="gk-select-neon w-full">
                            <option value="">{{ t("bulk_actions.select_priority") }}</option>
                        </select>
                    </div>
                </div>
                <div class="px-4 py-3 sm:px-6 sm:flex sm:flex-row-reverse" style="background: var(--gk-bg-elevated); border-top: 1px solid var(--gk-border-default);">
                    <button type="submit" class="w-full sm:w-auto sm:ml-3 inline-flex justify-center rounded-md px-4 py-2 text-sm font-medium transition-colors" style="background: var(--gk-tertiary); color: var(--gk-text-inverse);" onmouseover="this.style.boxShadow='0 0 15px rgba(255, 138, 61, 0.5)'" onmouseout="this.style.boxShadow='none'">
                        {{ t("bulk_actions.apply") }}
                    </button>
                    <button type="button" onclick="closeModal('bulk-priority-modal')" class="gk-btn-secondary mt-3 w-full sm:mt-0 sm:w-auto">
                        {{ t("common.cancel") }}
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
