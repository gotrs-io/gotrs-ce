# Development Dockerfile for Go backend with hot reload
FROM golang:1.21-alpine

# Install dependencies
RUN apk add --no-cache git make gcc musl-dev

# Create non-root user (check if group exists first)
RUN getent group 1000 || addgroup -g 1000 -S appgroup && \
    adduser -u 1000 -S appuser -G appgroup 2>/dev/null || \
    adduser -u 1000 -S appuser -G $(getent group 1000 | cut -d: -f1)

# Install air for hot reload (as root, then switch) - using versions compatible with Go 1.21
RUN go install github.com/cosmtrek/air@v1.49.0 && \
    go install github.com/swaggo/swag/cmd/swag@v1.16.3 && \
    go install github.com/golang-migrate/migrate/v4/cmd/migrate@v4.17.1

# Create app directory with correct permissions
RUN mkdir -p /app /home/appuser/.cache && \
    chown -R appuser:appgroup /app /home/appuser /go

# Switch to non-root user
USER appuser
WORKDIR /app

# Copy go mod files (as non-root)
COPY --chown=appuser:appgroup go.mod go.sum* ./

# Download dependencies (cached layer)
RUN go mod download 2>/dev/null || echo "No go.mod yet"

# Copy air config
COPY --chown=appuser:appgroup .air.toml* ./

# Expose port (as non-root)
EXPOSE 8080

# Default command
CMD ["air", "-c", ".air.toml"]