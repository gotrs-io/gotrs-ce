# ============================================
# DEVELOPMENT ENVIRONMENT ONLY
# ============================================
# 
# WARNING: These are DEVELOPMENT credentials only!
# NEVER use these values in production!
# 
# To use: cp .env.development .env
# For production: use .env.example as template
# ============================================

# Application
APP_ENV=development
APP_PORT=8080
APP_URL=http://localhost:8080

# DEVELOPMENT JWT Secret (NEVER use in production!)
JWT_SECRET=dev-secret-key-NEVER-use-in-production-generate-real-key
JWT_ACCESS_TOKEN_EXPIRY=15m
JWT_REFRESH_TOKEN_EXPIRY=7d

# Database (compose dev stack)
DB_DRIVER=mariadb
DB_HOST=mariadb
DB_PORT=3306
DB_NAME=otrs
DB_USER=otrs
DB_PASSWORD=ChangeThisPassword123!
DB_SSL_MODE=disable
MYSQL_ROOT_PASSWORD=ChangeThisRootPassword123!

# Valkey Cache
VALKEY_HOST=valkey
VALKEY_PORT=6379
VALKEY_PASSWORD=
VALKEY_DB=0

# Email (smtp4dev sandbox)
SMTP_HOST=smtp4dev
SMTP_PORT=25
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@gotrs.local
SMTP_FROM_NAME=GOTRS Dev
SMTP_TLS=false
SMTP_SKIP_VERIFY=true
EMAIL_FROM=noreply@gotrs.local
EMAIL_ENABLED=true

# Storage
STORAGE_BACKEND=local
STORAGE_LOCAL_PATH=./storage
STORAGE_PATH=/app/storage
MAX_UPLOAD_SIZE=10MB
ALLOWED_FILE_TYPES=pdf,doc,docx,txt,png,jpg,jpeg,gif,zip

# Zinc Search (development)
ZINC_USER=zinc_dev_admin
ZINC_PASSWORD=zinc_dev_password_CHANGE_IN_PRODUCTION

# Demo Mode (enabled for development)
DEMO_MODE=true
DEMO_ADMIN_EMAIL=demo-admin@gotrs.local
DEMO_ADMIN_PASSWORD=DemoAdmin123!
DEMO_AGENT_EMAIL=demo-agent@gotrs.local
DEMO_AGENT_PASSWORD=DemoAgent123!
DEMO_CUSTOMER_EMAIL=demo-customer@gotrs.local
DEMO_CUSTOMER_PASSWORD=DemoCustomer123!

# Security (relaxed for development)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Authorization,Content-Type
RATE_LIMIT_ENABLED=false
SESSION_SECRET=dev-session-secret-CHANGE-IN-PRODUCTION
SESSION_MAX_AGE=86400
SESSION_SECURE=false
SESSION_HTTP_ONLY=true

# Logging (verbose for development)
LOG_LEVEL=debug
LOG_FORMAT=text
LOG_OUTPUT=stdout

# Monitoring
METRICS_ENABLED=true
METRICS_PORT=9090

# Development Tools
DEV_HOT_RELOAD=true
DEV_VERBOSE_ERRORS=true
DEV_SQL_DEBUG=true

# Frontend development
VITE_API_URL=http://localhost:8080/api
VITE_WS_URL=ws://localhost:8080/ws