{% extends "layouts/base.pongo2" %}

{% block title %}Ticket Management - GOTRS{% endblock %}

{% block content %}
<!-- Floating Bulk Actions Bar (appears when tickets are selected) -->
{% if Tickets %}
<div id="floating-bulk-actions" class="fixed bottom-0 left-0 right-0 z-50 transform translate-y-full transition-transform duration-300 ease-in-out">
    <div class="bg-gray-800 dark:bg-gray-900 shadow-lg border-t border-gray-700">
        <div class="container mx-auto px-4 py-3">
            <div class="flex items-center justify-between">
                <div class="flex items-center space-x-4">
                    <span id="floating-selected-count" class="text-sm font-medium text-white">
                        <span class="inline-flex items-center justify-center w-6 h-6 bg-blue-600 rounded-full mr-2">0</span>
                        tickets selected
                    </span>
                    <div class="h-6 w-px bg-gray-600"></div>
                    <button onclick="bulkAssign()" class="inline-flex items-center px-3 py-1.5 text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 rounded-md transition-colors">
                        <svg class="w-4 h-4 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                        </svg>
                        Assign
                    </button>
                    <button onclick="bulkChangeStatus()" class="inline-flex items-center px-3 py-1.5 text-sm font-medium text-white bg-green-600 hover:bg-green-700 rounded-md transition-colors">
                        <svg class="w-4 h-4 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                        Change Status
                    </button>
                    <button onclick="bulkChangePriority()" class="inline-flex items-center px-3 py-1.5 text-sm font-medium text-white bg-orange-600 hover:bg-orange-700 rounded-md transition-colors">
                        <svg class="w-4 h-4 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 4h13M3 8h9m-9 4h6m4 0l4-4m0 0l4 4m-4-4v12"></path>
                        </svg>
                        Change Priority
                    </button>
                    <button onclick="bulkMerge()" class="inline-flex items-center px-3 py-1.5 text-sm font-medium text-white bg-purple-600 hover:bg-purple-700 rounded-md transition-colors">
                        <svg class="w-4 h-4 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
                        </svg>
                        Merge
                    </button>
                </div>
                <button onclick="clearAllSelections()" class="text-sm text-gray-400 hover:text-white transition-colors">
                    Clear selection
                </button>
            </div>
        </div>
    </div>
</div>
{% endif %}

<div class="container mx-auto px-4 py-8">
    <!-- Header -->
    <div class="mb-6 sm:flex sm:items-center sm:justify-between">
        <h1 class="text-3xl font-bold text-gray-900 dark:text-white">Ticket Management</h1>
        <div class="mt-4 sm:mt-0">
            <a href="/tickets/new"
               class="inline-flex items-center rounded-md bg-gotrs-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-gotrs-500">
                <svg class="-ml-0.5 mr-1.5 h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                    <path d="M10.75 4.75a.75.75 0 00-1.5 0v4.5h-4.5a.75.75 0 000 1.5h4.5v4.5a.75.75 0 001.5 0v-4.5h4.5a.75.75 0 000-1.5h-4.5v-4.5z" />
                </svg>
                {{ t("tickets.new_ticket") }}
            </a>
        </div>
    </div>

    <!-- Filters -->
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow mb-6">
        <div class="p-4">
            <form method="get" action="/agent/tickets" class="space-y-4 sm:space-y-0 sm:flex sm:items-center sm:space-x-4">
                <!-- Search -->
                <div class="flex-1">
                    <input id="search-input" type="text" name="search" value="{{ CurrentFilters.search }}"
                           placeholder="Search by ticket number, title, or customer..."
                           class="w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg dark:bg-gray-700 dark:text-white">
                </div>

                <!-- Status Filter -->
                <div>
                    <select name="status" class="px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg dark:bg-gray-700 dark:text-white">
                        <option value="all" {% if CurrentFilters.status == "all" %}selected{% endif %}>{{ t("tickets.all_statuses") }}</option>
                        <option value="not_closed" {% if CurrentFilters.status == "not_closed" %}selected{% endif %}>{{ t("common.not_closed") }}</option>
                        <option value="open" {% if CurrentFilters.status == "open" %}selected{% endif %}>{{ t("status.open") }}</option>
                        <option value="pending" {% if CurrentFilters.status == "pending" %}selected{% endif %}>{{ t("status.pending") }}</option>
                        <option value="closed" {% if CurrentFilters.status == "closed" %}selected{% endif %}>{{ t("status.closed") }}</option>
                    </select>
                </div>

                <!-- Queue Filter -->
                <div>
                    <select name="queue" class="px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg dark:bg-gray-700 dark:text-white">
                        <option value="all">All Queues</option>
                        {% for queue in AvailableQueues %}
                        <option value="{{ queue.id }}" {% if CurrentFilters.queue == queue.id %}selected{% endif %}>
                            {{ queue.name }}
                        </option>
                        {% endfor %}
                    </select>
                </div>

                <!-- Assignee Filter -->
                <div>
                    <select name="assignee" class="px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg dark:bg-gray-700 dark:text-white">
                        <option value="all" {% if CurrentFilters.assignee == "all" %}selected{% endif %}>All Tickets</option>
                        <option value="me" {% if CurrentFilters.assignee == "me" %}selected{% endif %}>My Tickets</option>
                        <option value="unassigned" {% if CurrentFilters.assignee == "unassigned" %}selected{% endif %}>Unassigned</option>
                    </select>
                </div>

                <!-- Buttons -->
                <div class="flex space-x-2">
                    <button id="search-btn" type="submit" class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700">
                        Filter
                    </button>
                    <a href="/agent/tickets" class="px-4 py-2 bg-gray-200 dark:bg-gray-700 text-gray-900 dark:text-white rounded-lg hover:bg-gray-300 dark:hover:bg-gray-600">
                        Clear
                    </a>
                </div>
            </form>

            <!-- Dynamic Field Filters (Collapsible) -->
            {% if SearchableDynamicFields|length > 0 %}
            {% set hasActiveDF = CurrentDFFilters|length > 0 %}
            <details class="mt-4 pt-4 border-t border-gray-200 dark:border-gray-700" {% if hasActiveDF %}open{% endif %}>
                <summary class="flex items-center cursor-pointer text-sm font-medium text-gray-600 dark:text-gray-300 hover:text-gray-800 dark:hover:text-white list-none">
                    <svg class="w-4 h-4 mr-2 transition-transform details-arrow" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                    </svg>
                    Dynamic Field Filters
                    {% if CurrentDFFilters|length > 0 %}
                    <span class="ml-2 px-2 py-0.5 text-xs bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-200 rounded-full">
                        {{ CurrentDFFilters|length }} active
                    </span>
                    {% endif %}
                </summary>
                <div class="mt-4">
                    <form method="get" action="/agent/tickets" class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
                        <!-- Preserve existing filters as hidden fields -->
                        {% if CurrentFilters.search %}<input type="hidden" name="search" value="{{ CurrentFilters.search }}">{% endif %}
                        {% if CurrentFilters.status %}<input type="hidden" name="status" value="{{ CurrentFilters.status }}">{% endif %}
                        {% if CurrentFilters.queue %}<input type="hidden" name="queue" value="{{ CurrentFilters.queue }}">{% endif %}
                        {% if CurrentFilters.assignee %}<input type="hidden" name="assignee" value="{{ CurrentFilters.assignee }}">{% endif %}
                        {% if CurrentFilters.sort %}<input type="hidden" name="sort" value="{{ CurrentFilters.sort }}">{% endif %}
                        {% if CurrentFilters.order %}<input type="hidden" name="order" value="{{ CurrentFilters.order }}">{% endif %}

                        {% for field in SearchableDynamicFields %}
                        <div>
                            <label class="block text-xs font-medium text-gray-500 dark:text-gray-400 mb-1">
                                {{ field.Label }}
                            </label>
                            {% if field.FieldType == "Dropdown" or field.FieldType == "Multiselect" %}
                            <select name="df_{{ field.Name }}"
                                    class="w-full px-3 py-2 text-sm border border-gray-300 dark:border-gray-600 rounded-lg dark:bg-gray-700 dark:text-white">
                                <option value="">-- Any --</option>
                                {% for option in field.Options %}
                                <option value="{{ option.key }}" {% if CurrentDFFilters["df_" + field.Name] == option.key %}selected{% endif %}>
                                    {{ option.value }}
                                </option>
                                {% endfor %}
                            </select>
                            {% elif field.FieldType == "Checkbox" %}
                            <select name="df_{{ field.Name }}"
                                    class="w-full px-3 py-2 text-sm border border-gray-300 dark:border-gray-600 rounded-lg dark:bg-gray-700 dark:text-white">
                                <option value="">-- Any --</option>
                                <option value="1" {% if CurrentDFFilters["df_" + field.Name] == "1" %}selected{% endif %}>Yes</option>
                                <option value="0" {% if CurrentDFFilters["df_" + field.Name] == "0" %}selected{% endif %}>No</option>
                            </select>
                            {% elif field.FieldType == "Date" or field.FieldType == "DateTime" %}
                            <div class="flex space-x-2">
                                <input type="date" name="df_{{ field.Name }}_gte"
                                       value="{{ CurrentDFFilters['df_' + field.Name + '_gte'] }}"
                                       placeholder="From"
                                       class="flex-1 px-3 py-2 text-sm border border-gray-300 dark:border-gray-600 rounded-lg dark:bg-gray-700 dark:text-white">
                                <input type="date" name="df_{{ field.Name }}_lte"
                                       value="{{ CurrentDFFilters['df_' + field.Name + '_lte'] }}"
                                       placeholder="To"
                                       class="flex-1 px-3 py-2 text-sm border border-gray-300 dark:border-gray-600 rounded-lg dark:bg-gray-700 dark:text-white">
                            </div>
                            {% else %}
                            <input type="text" name="df_{{ field.Name }}_contains"
                                   value="{{ CurrentDFFilters['df_' + field.Name + '_contains'] }}"
                                   placeholder="Contains..."
                                   class="w-full px-3 py-2 text-sm border border-gray-300 dark:border-gray-600 rounded-lg dark:bg-gray-700 dark:text-white">
                            {% endif %}
                        </div>
                        {% endfor %}

                        <div class="sm:col-span-2 lg:col-span-3 flex space-x-2">
                            <button type="submit" class="px-4 py-2 text-sm bg-blue-600 text-white rounded-lg hover:bg-blue-700">
                                Apply DF Filters
                            </button>
                        </div>
                    </form>
                </div>
            </details>
            {% endif %}
        </div>
    </div>

    <!-- Ticket List -->
    <div id="ticket-list-container" class="bg-white dark:bg-gray-800 rounded-lg shadow transition-all duration-300">
        <div class="overflow-x-auto">
            <table class="w-full table-fixed">
                <thead class="bg-gray-50 dark:bg-gray-700">
                    <tr>
                        <th class="w-10 px-2 py-2 text-left">
                            <input type="checkbox" id="select-all" class="rounded dark:bg-gray-600">
                        </th>
                        <th class="w-24 px-2 py-2 text-left">
                            <a href="?sort=tn&order={% if CurrentFilters.sort == 'tn' and CurrentFilters.order == 'asc' %}desc{% else %}asc{% endif %}&{{ request.GET.urlencode }}"
                               class="text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider hover:text-gray-700 dark:hover:text-white">
                                Ticket #
                                {% if CurrentFilters.sort == 'tn' %}
                                    {% if CurrentFilters.order == 'asc' %}↑{% else %}↓{% endif %}
                                {% endif %}
                            </a>
                        </th>
                        <th class="px-2 py-2 text-left" style="width: 20%;">
                            <a href="?sort=title&order={% if CurrentFilters.sort == 'title' and CurrentFilters.order == 'asc' %}desc{% else %}asc{% endif %}&{{ request.GET.urlencode }}"
                               class="text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider hover:text-gray-700 dark:hover:text-white">
                                Title
                                {% if CurrentFilters.sort == 'title' %}
                                    {% if CurrentFilters.order == 'asc' %}↑{% else %}↓{% endif %}
                                {% endif %}
                            </a>
                        </th>
                        <th class="w-28 px-2 py-2 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">
                            Customer
                        </th>
                        <th class="w-24 px-2 py-2 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">
                            Queue
                        </th>
                        <th class="w-24 px-2 py-2 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">
                            State
                        </th>
                        <th class="w-20 px-2 py-2 text-left">
                            <a href="?sort=priority&order={% if CurrentFilters.sort == 'priority' and CurrentFilters.order == 'asc' %}desc{% else %}asc{% endif %}&{{ request.GET.urlencode }}"
                               class="text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider hover:text-gray-700 dark:hover:text-white">
                                Prio
                                {% if CurrentFilters.sort == 'priority' %}
                                    {% if CurrentFilters.order == 'asc' %}↑{% else %}↓{% endif %}
                                {% endif %}
                            </a>
                        </th>
                        <th class="w-24 px-2 py-2 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">
                            Assigned
                        </th>
                        <th class="w-20 px-2 py-2 text-left">
                            <a href="?sort=create_time&order={% if CurrentFilters.sort == 'create_time' and CurrentFilters.order == 'asc' %}desc{% else %}asc{% endif %}&{{ request.GET.urlencode }}"
                               class="text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider hover:text-gray-700 dark:hover:text-white">
                                Age
                                {% if CurrentFilters.sort == 'create_time' %}
                                    {% if CurrentFilters.order == 'asc' %}↑{% else %}↓{% endif %}
                                {% endif %}
                            </a>
                        </th>
                        <th class="w-12 px-2 py-2 text-center text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">
                            #
                        </th>
                        <th class="w-20 px-2 py-2 text-right text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">
                            Actions
                        </th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-200 dark:divide-gray-700">
                    {% for ticket in Tickets %}
                    <tr class="hover:bg-gray-50 dark:hover:bg-gray-700">
                        <td class="px-2 py-2">
                            <input type="checkbox" class="ticket-select rounded dark:bg-gray-600" value="{{ ticket.id }}">
                        </td>
                        <td class="px-2 py-2 whitespace-nowrap">
							<a href="/ticket/{{ ticket.tn }}" class="text-blue-600 hover:text-blue-700 dark:text-blue-400 font-medium text-sm">
                                #{{ ticket.tn }}
                            </a>
                        </td>
                        <td class="px-2 py-2">
                            <div class="text-sm text-gray-900 dark:text-white truncate cursor-help" title="{{ ticket.title }}">
                                {{ ticket.title }}
                            </div>
                        </td>
                        <td class="px-2 py-2">
                            <div class="text-sm text-gray-900 dark:text-white truncate cursor-help" title="{{ ticket.customer|default:'-' }}{% if ticket.company %} ({{ ticket.company }}){% endif %}">
                                {{ ticket.customer|default:"-" }}
                            </div>
                        </td>
                        <td class="px-2 py-2">
                            <div class="text-sm text-gray-900 dark:text-white truncate cursor-help" title="{{ ticket.queue }}">
                                {{ ticket.queue }}
                            </div>
                        </td>
                        <td class="px-2 py-2 whitespace-nowrap">
                            <span class="px-1.5 inline-flex text-xs leading-5 font-semibold rounded-full
                                {% if 'new' in ticket.state|lower %}bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-200{% endif %}
                                {% if 'open' in ticket.state|lower %}bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-200{% endif %}
                                {% if 'pending' in ticket.state|lower %}bg-yellow-100 text-yellow-800 dark:bg-yellow-900 dark:text-yellow-200{% endif %}
                                {% if 'closed' in ticket.state|lower %}bg-gray-100 text-gray-800 dark:bg-gray-700 dark:text-gray-300{% endif %}
                                {% if 'merged' in ticket.state|lower %}bg-purple-100 text-purple-800 dark:bg-purple-900 dark:text-purple-200{% endif %}">
                                {{ ticket.state }}
                            </span>
                        </td>
                        <td class="px-2 py-2 whitespace-nowrap">
                            <span class="text-xs font-medium" {% if ticket.priority_color %}style="color: {{ ticket.priority_color }}"{% endif %}>
                                {{ ticket.priority }}
                            </span>
                        </td>
                        <td class="px-2 py-2">
                            <div class="text-sm text-gray-900 dark:text-white truncate cursor-help" title="{{ ticket.assigned_to|default:'Unassigned' }}">
                                {{ ticket.assigned_to|default:"-" }}
                            </div>
                        </td>
                        <td class="px-2 py-2 whitespace-nowrap text-xs text-gray-500 dark:text-gray-400">
                            {% if ticket.created_at_iso %}<span data-relative-time data-mode="since" data-direction="past" data-timestamp="{{ ticket.created_at_iso }}">{{ ticket.age }}</span>{% else %}{{ ticket.age }}{% endif %}
                        </td>
                        <td class="px-2 py-2 whitespace-nowrap text-xs text-gray-500 dark:text-gray-400 text-center">
                            {{ ticket.article_count }}
                        </td>
                        <td class="px-2 py-2 whitespace-nowrap text-right">
                            <div class="flex items-center justify-end space-x-1">
                                <button onclick="quickAssign({{ ticket.id }})" title="Quick Assign"
                                        class="text-blue-600 hover:text-blue-700 dark:text-blue-400 p-1">
                                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                                    </svg>
                                </button>
								<a href="/ticket/{{ ticket.tn }}" title="View Details"
                                   class="text-gray-600 hover:text-gray-700 dark:text-gray-400 p-1">
                                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                                    </svg>
                                </a>
                            </div>
                        </td>
                    </tr>
                    {% empty %}
                    <tr>
                        <td colspan="11" class="px-4 py-8 text-center text-gray-500 dark:text-gray-400">
                            No tickets found matching your criteria
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>

        <!-- Bulk Selection Controls -->
        {% if Tickets %}
        <div class="px-4 py-2 bg-gray-50 dark:bg-gray-700 border-t border-gray-200 dark:border-gray-600">
            <div class="flex items-center justify-between">
                <div class="flex items-center space-x-3">
                    <button id="select-all-matching" onclick="selectAllMatching()"
                            class="text-xs text-blue-600 hover:text-blue-700 dark:text-blue-400 hover:underline">
                        Select all {{ Pagination.TotalCount }} matching tickets
                    </button>
                    <span class="text-xs text-gray-400">|</span>
                    <span id="selection-info" class="text-xs text-gray-500 dark:text-gray-400">
                        Select tickets to use bulk actions
                    </span>
                </div>
                <div class="text-xs text-gray-500 dark:text-gray-400">
                    Showing {{ Tickets|length }} of {{ Pagination.TotalCount }} tickets
                </div>
            </div>
        </div>
        {% endif %}

        <!-- Pagination -->
        {% if Pagination.TotalPages > 1 %}
        <div class="px-6 py-3 bg-gray-50 dark:bg-gray-700 border-t border-gray-200 dark:border-gray-600">
            <div class="flex items-center justify-between">
                <div class="text-sm text-gray-700 dark:text-gray-300">
                    Page {{ Pagination.Page }} of {{ Pagination.TotalPages }}
                </div>
                <div class="flex items-center space-x-1">
                    <!-- First Page -->
                    {% if Pagination.HasFirst %}
                    <a href="?page=1&per_page={{ Pagination.PerPage }}&status={{ CurrentFilters.status }}&queue={{ CurrentFilters.queue }}&assignee={{ CurrentFilters.assignee }}{% if CurrentFilters.search %}&search={{ CurrentFilters.search }}{% endif %}&sort={{ CurrentFilters.sort }}&order={{ CurrentFilters.order }}{% for key, val in CurrentDFFilters %}{% if val %}&df_{{ key }}={{ val }}{% endif %}{% endfor %}"
                       class="px-2 py-1 text-sm bg-white dark:bg-gray-600 border border-gray-300 dark:border-gray-500 rounded hover:bg-gray-100 dark:hover:bg-gray-500 text-gray-700 dark:text-gray-200"
                       title="First page">
                        &laquo;
                    </a>
                    {% else %}
                    <span class="px-2 py-1 text-sm bg-gray-100 dark:bg-gray-700 border border-gray-200 dark:border-gray-600 rounded text-gray-400 dark:text-gray-500 cursor-not-allowed">&laquo;</span>
                    {% endif %}

                    <!-- Previous Page -->
                    {% if Pagination.Page > 1 %}
                    <a href="?page={{ Pagination.PrevPage }}&per_page={{ Pagination.PerPage }}&status={{ CurrentFilters.status }}&queue={{ CurrentFilters.queue }}&assignee={{ CurrentFilters.assignee }}{% if CurrentFilters.search %}&search={{ CurrentFilters.search }}{% endif %}&sort={{ CurrentFilters.sort }}&order={{ CurrentFilters.order }}{% for key, val in CurrentDFFilters %}{% if val %}&df_{{ key }}={{ val }}{% endif %}{% endfor %}"
                       class="px-2 py-1 text-sm bg-white dark:bg-gray-600 border border-gray-300 dark:border-gray-500 rounded hover:bg-gray-100 dark:hover:bg-gray-500 text-gray-700 dark:text-gray-200"
                       title="Previous page">
                        &lsaquo;
                    </a>
                    {% else %}
                    <span class="px-2 py-1 text-sm bg-gray-100 dark:bg-gray-700 border border-gray-200 dark:border-gray-600 rounded text-gray-400 dark:text-gray-500 cursor-not-allowed">&lsaquo;</span>
                    {% endif %}

                    <!-- Page Numbers -->
                    {% for pageNum in Pagination.PageNumbers %}
                        {% if pageNum == Pagination.Page %}
                        <span class="px-3 py-1 text-sm bg-blue-600 text-white border border-blue-600 rounded font-medium">{{ pageNum }}</span>
                        {% else %}
                        <a href="?page={{ pageNum }}&per_page={{ Pagination.PerPage }}&status={{ CurrentFilters.status }}&queue={{ CurrentFilters.queue }}&assignee={{ CurrentFilters.assignee }}{% if CurrentFilters.search %}&search={{ CurrentFilters.search }}{% endif %}&sort={{ CurrentFilters.sort }}&order={{ CurrentFilters.order }}{% for key, val in CurrentDFFilters %}{% if val %}&df_{{ key }}={{ val }}{% endif %}{% endfor %}"
                           class="px-3 py-1 text-sm bg-white dark:bg-gray-600 border border-gray-300 dark:border-gray-500 rounded hover:bg-gray-100 dark:hover:bg-gray-500 text-gray-700 dark:text-gray-200">
