{
  "name": "gotrs-ce",
  "version": "0.1.0",
  "description": "Modern Open Source Ticketing System",
  "private": true,
  "scripts": {
    "generate-types": "node scripts/generate-types.js",
    "generate-docs": "node scripts/generate-docs.js",
    "validate-api": "swagger-codegen validate -i api/openapi.yaml",
    "serve-docs": "echo 'Open docs/api/index.html in your browser'",
    "test:contract": "bun run generate-types && bun run validate-api && bun run generate-docs",
    "contracts:all": "bun run generate-types && bun run generate-docs && cd web && bun run test:contracts",
    "build-css": "BROWSERSLIST_IGNORE_OLD_DATA=1 ./node_modules/.bin/tailwindcss -i ./static/css/input.css -o ./static/css/output.css --minify",
    "watch-css": "BROWSERSLIST_IGNORE_OLD_DATA=1 ./node_modules/.bin/tailwindcss -i ./static/css/input.css -o ./static/css/output.css --watch",
    "build-tiptap": "esbuild static/js/tiptap-bundle.js --bundle --minify --format=iife --global-name=TiptapBundle --outfile=static/js/tiptap.min.js",
    "build-js": "bun run build-tiptap",
    "build": "bun run build-css && bun run build-js"
  },
  "devDependencies": {
    "esbuild": "^0.27.2",
    "js-yaml": "^4.1.1",
    "browserslist": "^4.28.1",
    "caniuse-lite": "^1.0.30001763"
  },
  "keywords": [
    "ticketing",
    "helpdesk",
    "otrs",
    "support",
    "typescript",
    "go",
    "react"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/gotrs-io/gotrs-ce.git"
  },
  "license": "AGPL-3.0",
  "author": "GOTRS Team",
  "dependencies": {
    "@playwright/test": "^1.57.0",
    "@tailwindcss/forms": "^0.5.11",
    "@tailwindcss/typography": "^0.5.19",
    "@tiptap/core": "^3.15.3",
    "@tiptap/extension-color": "^3.15.3",
    "@tiptap/extension-highlight": "^3.15.3",
    "@tiptap/extension-image": "^3.15.3",
    "@tiptap/extension-link": "^3.15.3",
    "@tiptap/extension-placeholder": "^3.15.3",
    "@tiptap/extension-table": "^3.15.3",
    "@tiptap/extension-table-cell": "^3.15.3",
    "@tiptap/extension-table-header": "^3.15.3",
    "@tiptap/extension-table-row": "^3.15.3",
    "@tiptap/extension-task-item": "^3.15.3",
    "@tiptap/extension-task-list": "^3.15.3",
    "@tiptap/extension-text-align": "^3.15.3",
    "@tiptap/extension-text-style": "^3.15.3",
    "@tiptap/extension-underline": "^3.15.3",
    "@tiptap/pm": "^3.15.3",
    "@tiptap/starter-kit": "^3.15.3",
    "tailwindcss": "~3.4.17"
  }
}
