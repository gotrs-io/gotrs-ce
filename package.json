{
  "name": "gotrs-ce",
  "version": "0.1.0",
  "description": "Modern Open Source Ticketing System",
  "private": true,
  "scripts": {
    "generate-types": "node scripts/generate-types.js",
    "generate-docs": "node scripts/generate-docs.js",
    "validate-api": "swagger-codegen validate -i api/openapi.yaml",
    "serve-docs": "echo 'Open docs/api/index.html in your browser'",
    "test:contract": "npm run generate-types && npm run validate-api && npm run generate-docs",
    "contracts:all": "npm run generate-types && npm run generate-docs && cd web && npm run test:contracts",
    "build-css": "npx tailwindcss -i ./static/css/input.css -o ./static/css/output.css --minify",
    "watch-css": "npx tailwindcss -i ./static/css/input.css -o ./static/css/output.css --watch",
  "build-tiptap": "esbuild static/js/tiptap-bundle.js --bundle --minify --format=iife --global-name=TiptapBundle --outfile=static/js/tiptap.min.js",
    "build-js": "npm run build-tiptap",
    "build": "npm run build-css && npm run build-js"
  },
  "devDependencies": {
    "esbuild": "^0.25.10",
    "js-yaml": "^4.1.0"
  },
  "keywords": [
    "ticketing",
    "helpdesk",
    "otrs",
    "support",
    "typescript",
    "go",
    "react"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/gotrs-io/gotrs-ce.git"
  },
  "license": "AGPL-3.0",
  "author": "GOTRS Team",
  "dependencies": {
    "@playwright/test": "^1.55.1",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.18",
    "@tiptap/core": "^3.5.1",
    "@tiptap/extension-color": "^3.5.1",
    "@tiptap/extension-highlight": "^3.5.1",
    "@tiptap/extension-image": "^3.5.1",
    "@tiptap/extension-link": "^3.5.1",
    "@tiptap/extension-placeholder": "^3.5.1",
    "@tiptap/extension-table": "^3.5.1",
    "@tiptap/extension-table-cell": "^3.5.1",
    "@tiptap/extension-table-header": "^3.5.1",
    "@tiptap/extension-table-row": "^3.5.1",
    "@tiptap/extension-task-item": "^3.5.1",
    "@tiptap/extension-task-list": "^3.5.1",
    "@tiptap/extension-text-align": "^3.5.1",
    "@tiptap/extension-text-style": "^3.5.1",
    "@tiptap/extension-underline": "^3.5.1",
    "@tiptap/pm": "^3.5.1",
    "@tiptap/starter-kit": "^3.5.1",
    "npm-check-updates": "^18.3.0",
    "tailwindcss": "^3.4.0"
  }
}
