function bulkMerge() {
    const tickets = getSelectedTickets();
    if (tickets.length < 2) {
        showToast(false, 'Not Enough Tickets', 'Please select at least two tickets to merge');
        return;
    }
    selectedTicketIds = tickets;
    document.getElementById('merge-ticket-count').textContent = tickets.length;

    // Populate merge target dropdown with selected tickets
    const select = document.getElementById('bulk-merge-target');
    while (select.options.length > 1) {
        select.remove(1);
    }

    // Get ticket info from the table
    tickets.forEach(ticketId => {
        const row = document.querySelector(`input.ticket-select[value="${ticketId}"]`).closest('tr');
        const tn = row.querySelector('td:nth-child(2) a').textContent.trim();
        const title = row.querySelector('td:nth-child(3) div').textContent.trim();
        const option = document.createElement('option');
        option.value = ticketId;
        option.textContent = `${tn} - ${title.substring(0, 40)}${title.length > 40 ? '...' : ''}`;
        select.appendChild(option);
    });

    openModal('bulk-merge-modal');
}

// Quick actions
function quickAssign(ticketId) {
    selectedTicketIds = [ticketId];
    document.getElementById('assign-ticket-count').textContent = '1';
    loadOptions('agent', 'bulk-assign-select');
    openModal('bulk-assign-modal');
}

function quickReply(ticketId) {
    // Navigate to ticket detail with reply panel open
    const row = document.querySelector(`input.ticket-select[value="${ticketId}"]`).closest('tr');
    const tn = row.querySelector('td:nth-child(2) a').textContent.trim().replace('#', '');
    window.location.href = `/ticket/${tn}?action=reply`;
}

// Handle pending state visibility
document.getElementById('bulk-status-select').addEventListener('change', function() {
    const option = this.options[this.selectedIndex];
    const pendingContainer = document.getElementById('pending-time-container');
    if (option.dataset.pending === 'true') {
        pendingContainer.classList.remove('hidden');
        document.getElementById('bulk-pending-until').required = true;
    } else {
        pendingContainer.classList.add('hidden');
        document.getElementById('bulk-pending-until').required = false;
    }
});

// Form submissions
async function submitBulkStatus(event) {
    event.preventDefault();
    const statusId = document.getElementById('bulk-status-select').value;
    const pendingUntil = document.getElementById('bulk-pending-until').value;

    try {
        const response = await fetch('/agent/tickets/bulk/status', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({
                ticket_ids: selectedTicketIds,
                status_id: parseInt(statusId),
                pending_until: pendingUntil ? new Date(pendingUntil).getTime() / 1000 : 0
            })
        });

        const result = await response.json();
        closeModal('bulk-status-modal');

        if (result.success) {
            showToast(true, 'Status Updated', `Successfully updated ${result.succeeded} ticket(s)`);
            setTimeout(() => window.location.reload(), 1500);
        } else {
            showToast(false, 'Partial Success', `Updated ${result.succeeded} of ${result.total} tickets. ${result.failed} failed.`);
        }
    } catch (error) {
        showToast(false, 'Error', 'Failed to update status');
    }
}

