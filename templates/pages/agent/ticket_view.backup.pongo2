{% extends "layouts/base.pongo2" %}

{% block title %}Ticket #{{ ticket.tn }} - {{ ticket.title }} - GOTRS{% endblock %}

{% block content %}
<div class="container mx-auto px-4 py-8">
    <!-- Header -->
    <div class="mb-6">
        <div class="flex items-center justify-between">
            <div>
                <nav class="flex mb-2" aria-label="Breadcrumb">
                    <ol class="flex items-center space-x-2">
                        <li><a href="/agent/dashboard" class="text-blue-600 hover:text-blue-700">Dashboard</a></li>
                        <li class="text-gray-400">/</li>
                        <li><a href="/agent/tickets" class="text-blue-600 hover:text-blue-700">Tickets</a></li>
                        <li class="text-gray-400">/</li>
                        <li class="text-gray-600">#{{ ticket.tn }}</li>
                    </ol>
                </nav>
                <h1 class="text-3xl font-bold text-gray-900 dark:text-white">{{ ticket.title }}</h1>
                <div class="mt-2 flex items-center space-x-4">
                    <span class="px-2 py-1 text-xs rounded-full
                        {% if ticket.state_type == 'new' %}bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-200
                        {% elif ticket.state_type == 'open' %}bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-200
                        {% elif ticket.state_type == 'pending' %}bg-yellow-100 text-yellow-800 dark:bg-yellow-900 dark:text-yellow-200
                        {% elif ticket.state_type == 'closed' %}bg-gray-100 text-gray-800 dark:bg-gray-700 dark:text-gray-300
                        {% else %}bg-gray-100 text-gray-800{% endif %}">
                        {{ ticket.state }}
                    </span>
                    <span class="text-sm text-gray-600 dark:text-gray-400">Priority: {{ ticket.priority }}</span>
                    <span class="text-sm text-gray-600 dark:text-gray-400">Queue: {{ ticket.queue }}</span>
                </div>
            </div>
            <div class="flex space-x-2">
                <button onclick="replyToTicket()" class="px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700">
                    Reply
                </button>
                <button onclick="addNote({{ ticket.id }})" class="px-4 py-2 bg-gray-200 dark:bg-gray-700 text-gray-900 dark:text-white rounded hover:bg-gray-300 dark:hover:bg-gray-600">
                    Add Note
                </button>
            </div>
        </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
        <!-- Main Content -->
        <div class="lg:col-span-2">
            <!-- Articles -->
            <div class="bg-white dark:bg-gray-800 rounded-lg shadow">
                <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-700">
                    <h2 class="text-lg font-semibold text-gray-900 dark:text-white">Conversation</h2>
                </div>
                <div class="divide-y divide-gray-200 dark:divide-gray-700">
                    {% for article in articles %}
                    <div class="p-6">
                        <div class="flex items-start space-x-4">
                            <div class="flex-shrink-0">
                                <div class="w-10 h-10 rounded-full bg-gray-300 dark:bg-gray-600 flex items-center justify-center">
                                    <span class="text-sm font-medium text-gray-700 dark:text-gray-300">
                                        {{ article.from_name|first|upper }}
                                    </span>
                                </div>
                            </div>
                            <div class="flex-1">
                                <div class="flex items-center justify-between">
                                    <h3 class="text-sm font-medium text-gray-900 dark:text-white">
                                        {{ article.from_name }}
                                        {% if article.sender_type == 'agent' %}
                                        <span class="ml-2 px-2 py-1 text-xs bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-200 rounded">Agent</span>
                                        {% elif article.sender_type == 'customer' %}
                                        <span class="ml-2 px-2 py-1 text-xs bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-200 rounded">Customer</span>
                                        {% else %}
                                        <span class="ml-2 px-2 py-1 text-xs bg-gray-100 text-gray-800 dark:bg-gray-700 dark:text-gray-300 rounded">System</span>
                                        {% endif %}
                                    </h3>
                                    <p class="text-sm text-gray-500 dark:text-gray-400">{{ article.create_time }}</p>
                                </div>
                                <div class="mt-2 text-sm text-gray-700 dark:text-gray-300">
                                    <p>{{ article.subject }}</p>
                                </div>
                                <div class="mt-2 prose prose-sm dark:prose-invert max-w-none">
                                    {{ article.body|safe }}
                                </div>
                                {% if article.attachments %}
                                <div class="mt-4">
                                    <h4 class="text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wide">Attachments</h4>
                                    <ul class="mt-2 space-y-1">
                                        {% for attachment in article.attachments %}
                                        <li>
                                            <a href="/agent/tickets/{{ ticket.id }}/articles/{{ article.id }}/attachments/{{ attachment.id }}"
                                               class="text-sm text-blue-600 hover:text-blue-700 dark:text-blue-400">
                                                {{ attachment.filename }} ({{ attachment.size }})
                                            </a>
                                        </li>
                                        {% endfor %}
                                    </ul>
                                </div>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                    {% empty %}
                    <div class="p-6 text-center text-gray-500 dark:text-gray-400">
                        No articles yet
                    </div>
                    {% endfor %}
                </div>
            </div>
        </div>

        <!-- Sidebar -->
        <div class="space-y-6">
            <!-- Ticket Details -->
            <div class="bg-white dark:bg-gray-800 rounded-lg shadow">
                <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-700">
                    <h2 class="text-lg font-semibold text-gray-900 dark:text-white">Details</h2>
                </div>
                <div class="p-6 space-y-4">
                    <div>
                        <label class="block text-sm font-medium text-gray-700 dark:text-gray-300">Ticket Number</label>
                        <p class="mt-1 text-sm text-gray-900 dark:text-white">#{{ ticket.tn }}</p>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700 dark:text-gray-300">Customer</label>
                        <p class="mt-1 text-sm text-gray-900 dark:text-white">
                            {{ ticket.customer_name|default:ticket.customer_user_id|default:"-" }}
                            {% if ticket.customer_company %}
                            <br><span class="text-xs text-gray-500">{{ ticket.customer_company }}</span>
                            {% endif %}
                        </p>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700 dark:text-gray-300">Assigned To</label>
                        <p class="mt-1 text-sm text-gray-900 dark:text-white">
                            {{ ticket.assigned_to|default:"Unassigned" }}
                        </p>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700 dark:text-gray-300">Created</label>
                        <p class="mt-1 text-sm text-gray-900 dark:text-white">{{ ticket.create_time }}</p>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700 dark:text-gray-300">Last Updated</label>
                        <p class="mt-1 text-sm text-gray-900 dark:text-white">{{ ticket.change_time }}</p>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700 dark:text-gray-300">Type</label>
                        <p class="mt-1 text-sm text-gray-900 dark:text-white">{{ ticket.type|default:"Unclassified" }}</p>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700 dark:text-gray-300">Service</label>
                        <p class="mt-1 text-sm text-gray-900 dark:text-white">{{ ticket.service|default:"-" }}</p>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700 dark:text-gray-300">SLA</label>
                        <p class="mt-1 text-sm text-gray-900 dark:text-white">{{ ticket.sla|default:"-" }}</p>
                    </div>
                </div>
            </div>

            <!-- Quick Actions -->
            <div class="bg-white dark:bg-gray-800 rounded-lg shadow">
                <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-700">
                    <h2 class="text-lg font-semibold text-gray-900 dark:text-white">Quick Actions</h2>
                </div>
                <div class="p-6 space-y-3">
                    <button onclick="changeStatus()" class="w-full px-4 py-2 text-left text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700 rounded">
                        Change Status
                    </button>
                    <button onclick="assignAgent()" class="w-full px-4 py-2 text-left text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700 rounded">
                        Assign Agent
                    </button>
                    <button onclick="changePriority()" class="w-full px-4 py-2 text-left text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700 rounded">
                        Change Priority
                    </button>
                    <button onclick="moveQueue()" class="w-full px-4 py-2 text-left text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700 rounded">
                        Move to Queue
                    </button>
                    <button onclick="mergeTicket()" class="w-full px-4 py-2 text-left text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700 rounded">
                        Merge Ticket
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Reply Modal -->
<div id="replyModal" class="hidden fixed inset-0 bg-gray-500 bg-opacity-75 overflow-y-auto z-50">
    <div class="flex min-h-full items-center justify-center p-4">
        <div class="relative bg-white dark:bg-gray-800 rounded-lg shadow-xl w-full max-w-2xl">
            <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-700">
                <h3 class="text-lg font-semibold text-gray-900 dark:text-white">Reply to Ticket</h3>
            </div>
            <form id="replyForm" onsubmit="submitReply(event)">
                <div class="p-6 space-y-4">
                    <div>
                        <label class="block text-sm font-medium text-gray-700 dark:text-gray-300">Subject</label>
                        <input type="text" name="subject" value="Re: {{ ticket.title }}" required
                               class="mt-1 w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg dark:bg-gray-700 dark:text-white">
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700 dark:text-gray-300">Message</label>
                        <textarea name="body" rows="6" required
                                  class="mt-1 w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg dark:bg-gray-700 dark:text-white"></textarea>
                    </div>
                </div>
                <div class="px-6 py-4 border-t border-gray-200 dark:border-gray-700 flex justify-end space-x-3">
                    <button type="button" onclick="closeModal('replyModal')"
                            class="px-4 py-2 text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700 rounded">
                        Cancel
                    </button>
                    <button type="submit"
                            class="px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700">
                        Send Reply
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Note Modal -->
<div id="noteModal" class="hidden fixed inset-0 bg-gray-500 bg-opacity-75 overflow-y-auto z-50">
    <div class="flex min-h-full items-center justify-center p-4">
        <div class="relative bg-white dark:bg-gray-800 rounded-lg shadow-xl w-full max-w-2xl">
            <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-700">
                <h3 class="text-lg font-semibold text-gray-900 dark:text-white">Add Internal Note</h3>
            </div>
            <form id="noteForm" onsubmit="submitNote(event)">
                <div class="p-6 space-y-4">
                    <div>
                        <label class="block text-sm font-medium text-gray-700 dark:text-gray-300">Subject</label>
                        <input type="text" name="subject" placeholder="Note subject" required
                               class="mt-1 w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg dark:bg-gray-700 dark:text-white">
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700 dark:text-gray-300">Note</label>
                        <textarea name="body" rows="6" required
                                  class="mt-1 w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg dark:bg-gray-700 dark:text-white"></textarea>
                    </div>
                </div>
                <div class="px-6 py-4 border-t border-gray-200 dark:border-gray-700 flex justify-end space-x-3">
                    <button type="button" onclick="closeModal('noteModal')"
                            class="px-4 py-2 text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700 rounded">
                        Cancel
                    </button>
                    <button type="submit"
                            class="px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700">
                        Add Note
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Status Modal -->
<div id="statusModal" class="hidden fixed inset-0 bg-gray-500 bg-opacity-75 overflow-y-auto z-50">
    <div class="flex min-h-full items-center justify-center p-4">
        <div class="relative bg-white dark:bg-gray-800 rounded-lg shadow-xl w-full max-w-md">
            <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-700">
                <h3 class="text-lg font-semibold text-gray-900 dark:text-white">Change Status</h3>
            </div>
            <form id="statusForm" onsubmit="submitStatus(event)">
                <div class="p-6">
                    <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">New Status</label>
                    <select name="status_id" required
                            class="w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg dark:bg-gray-700 dark:text-white">
                        <option value="">Select status...</option>
                        <option value="1">new</option>
                        <option value="2">open</option>
                        <option value="4">pending reminder</option>
                        <option value="5">pending auto close+</option>
                        <option value="6">pending auto close-</option>
                        <option value="7">closed successful</option>
                        <option value="8">closed unsuccessful</option>
                    </select>
                </div>
                <div class="px-6 py-4 border-t border-gray-200 dark:border-gray-700 flex justify-end space-x-3">
                    <button type="button" onclick="closeModal('statusModal')"
                            class="px-4 py-2 text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700 rounded">
                        Cancel
                    </button>
                    <button type="submit"
                            class="px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700">
                        Change Status
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Assign Modal -->
<div id="assignModal" class="hidden fixed inset-0 bg-gray-500 bg-opacity-75 overflow-y-auto z-50">
    <div class="flex min-h-full items-center justify-center p-4">
        <div class="relative bg-white dark:bg-gray-800 rounded-lg shadow-xl w-full max-w-md">
            <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-700">
                <h3 class="text-lg font-semibold text-gray-900 dark:text-white">Assign Agent</h3>
            </div>
            <form id="assignForm" onsubmit="submitAssign(event)">
                <div class="p-6">
                    <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Assign To</label>
                    <select name="user_id" required
                            class="w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg dark:bg-gray-700 dark:text-white">
                        <option value="">Select agent...</option>
                    </select>
                </div>
                <div class="px-6 py-4 border-t border-gray-200 dark:border-gray-700 flex justify-end space-x-3">
                    <button type="button" onclick="closeModal('assignModal')"
                            class="px-4 py-2 text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700 rounded">
                        Cancel
                    </button>
                    <button type="submit"
                            class="px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700">
                        Assign
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Priority Modal -->
<div id="priorityModal" class="hidden fixed inset-0 bg-gray-500 bg-opacity-75 overflow-y-auto z-50">
    <div class="flex min-h-full items-center justify-center p-4">
        <div class="relative bg-white dark:bg-gray-800 rounded-lg shadow-xl w-full max-w-md">
            <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-700">
                <h3 class="text-lg font-semibold text-gray-900 dark:text-white">Change Priority</h3>
            </div>
            <form id="priorityForm" onsubmit="submitPriority(event)">
                <div class="p-6">
                    <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">New Priority</label>
                    <select name="priority_id" required
                            class="w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg dark:bg-gray-700 dark:text-white">
                        <option value="">Select priority...</option>
                        <option value="1" {% if ticket.priority_id == 1 %}selected{% endif %}>1 very low</option>
                        <option value="2" {% if ticket.priority_id == 2 %}selected{% endif %}>2 low</option>
                        <option value="3" {% if ticket.priority_id == 3 %}selected{% endif %}>3 normal</option>
                        <option value="4" {% if ticket.priority_id == 4 %}selected{% endif %}>4 high</option>
                        <option value="5" {% if ticket.priority_id == 5 %}selected{% endif %}>5 very high</option>
                    </select>
                </div>
                <div class="px-6 py-4 border-t border-gray-200 dark:border-gray-700 flex justify-end space-x-3">
                    <button type="button" onclick="closeModal('priorityModal')"
                            class="px-4 py-2 text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700 rounded">
                        Cancel
                    </button>
                    <button type="submit"
                            class="px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700">
                        Update Priority
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Queue Modal -->
<div id="queueModal" class="hidden fixed inset-0 bg-gray-500 bg-opacity-75 overflow-y-auto z-50">
    <div class="flex min-h-full items-center justify-center p-4">
        <div class="relative bg-white dark:bg-gray-800 rounded-lg shadow-xl w-full max-w-md">
            <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-700">
                <h3 class="text-lg font-semibold text-gray-900 dark:text-white">Move to Queue</h3>
            </div>
            <form id="queueForm" onsubmit="submitQueue(event)">
                <div class="p-6">
                    <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Select Queue</label>
                    <select name="queue_id" required
                            class="w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg dark:bg-gray-700 dark:text-white">
                        <option value="">Select queue...</option>
                        <!-- Will be populated dynamically -->
                    </select>
                </div>
                <div class="px-6 py-4 border-t border-gray-200 dark:border-gray-700 flex justify-end space-x-3">
                    <button type="button" onclick="closeModal('queueModal')"
                            class="px-4 py-2 text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700 rounded">
                        Cancel
                    </button>
                    <button type="submit"
                            class="px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700">
                        Move Ticket
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Merge Modal -->
<div id="mergeModal" class="hidden fixed inset-0 bg-gray-500 bg-opacity-75 overflow-y-auto z-50">
    <div class="flex min-h-full items-center justify-center p-4">
        <div class="relative bg-white dark:bg-gray-800 rounded-lg shadow-xl w-full max-w-md">
            <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-700">
                <h3 class="text-lg font-semibold text-gray-900 dark:text-white">Merge Ticket</h3>
            </div>
            <form id="mergeForm" onsubmit="submitMerge(event)">
                <div class="p-6">
                    <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                        Merge into Ticket Number
                    </label>
                    <input type="text" name="target_tn" placeholder="e.g., 2025010000001" required
                           class="w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg dark:bg-gray-700 dark:text-white">
                    <p class="mt-2 text-sm text-gray-500 dark:text-gray-400">
                        This ticket will be closed and merged into the target ticket.
                    </p>
                </div>
                <div class="px-6 py-4 border-t border-gray-200 dark:border-gray-700 flex justify-end space-x-3">
                    <button type="button" onclick="closeModal('mergeModal')"
                            class="px-4 py-2 text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700 rounded">
                        Cancel
                    </button>
                    <button type="submit"
                            class="px-4 py-2 bg-red-600 text-white rounded hover:bg-red-700">
                        Merge Tickets
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<script src="/static/js/ticket-zoom.js"></script>
<script>
const ticketId = {{ ticket.id }};

// Initialize ticket zoom functionality
initTicketZoom(ticketId);

function replyToTicket() {
    document.getElementById('replyModal').classList.remove('hidden');
}

// addNote function now provided by ticket-zoom.js

function changeStatus() {
    document.getElementById('statusModal').classList.remove('hidden');
}

function assignAgent() {
    // Load available agents
    fetch(`/api/v1/queues/{{ ticket.queue_id|default:1 }}/agents`)
        .then(r => r.json())
        .then(data => {
            const select = document.querySelector('#assignModal select[name="user_id"]');
            select.innerHTML = '<option value="">Select agent...</option>';
            if (data.agents) {
                data.agents.forEach(agent => {
                    select.innerHTML += `<option value="${agent.id}">${agent.name}</option>`;
                });
            }
        })
        .catch(() => {
            // Fallback to hardcoded agents
            const select = document.querySelector('#assignModal select[name="user_id"]');
            select.innerHTML = `
                <option value="">Select agent...</option>
                <option value="2">admin</option>
                <option value="4">agent.jones</option>
            `;
        });
    document.getElementById('assignModal').classList.remove('hidden');
}

function changePriority() {
    document.getElementById('priorityModal').classList.remove('hidden');
}

function moveQueue() {
    // Load available queues
    fetch('/api/v1/queues')
        .then(r => r.json())
        .then(data => {
            const select = document.querySelector('#queueModal select[name="queue_id"]');
            select.innerHTML = '<option value="">Select queue...</option>';
            if (data.queues) {
                data.queues.forEach(queue => {
                    const selected = queue.id == {{ ticket.queue_id }} ? 'selected' : '';
                    select.innerHTML += `<option value="${queue.id}" ${selected}>${queue.name}</option>`;
                });
            }
        })
        .catch(() => {
            // Fallback to common queues
            const select = document.querySelector('#queueModal select[name="queue_id"]');
            select.innerHTML = `
                <option value="">Select queue...</option>
                <option value="1" {% if ticket.queue_id == 1 %}selected{% endif %}>Postmaster</option>
                <option value="2" {% if ticket.queue_id == 2 %}selected{% endif %}>Junk</option>
                <option value="3" {% if ticket.queue_id == 3 %}selected{% endif %}>Raw</option>
                <option value="4" {% if ticket.queue_id == 4 %}selected{% endif %}>Misc</option>
                <option value="5" {% if ticket.queue_id == 5 %}selected{% endif %}>Support</option>
            `;
        });
    document.getElementById('queueModal').classList.remove('hidden');
}

function mergeTicket() {
    document.getElementById('mergeModal').classList.remove('hidden');
}

function closeModal(modalId) {
    document.getElementById(modalId).classList.add('hidden');
}

function submitReply(event) {
    event.preventDefault();
    const formData = new FormData(event.target);
    fetch(`/agent/tickets/${ticketId}/reply`, {
        method: 'POST',
        body: formData
    }).then(() => location.reload());
}

function submitNote(event) {
