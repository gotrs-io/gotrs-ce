<!DOCTYPE html>
<html lang="{{ getLang() }}" dir="{{ getDirection() }}">
<head>
    <meta charset="UTF-8">
    <title>{{ t("navigation.dashboard") }} - {{ t("app.name") }}</title>
</head>
<body>
    <h1>{{ t("navigation.dashboard") }}</h1>
    <p>{{ t("welcome.greeting") }}</p>
    <nav>
        <a href="/dashboard">{{ t("navigation.dashboard") }}</a> |
        <a href="/tickets">{{ t("navigation.tickets") }}</a> |
        <a href="/settings">{{ t("navigation.settings") }}</a>
    </nav>
    <hr>
    <div>
        <h2>{{ t("status.open") }} {{ t("tickets.title") }}: 24</h2>
        <h2>{{ t("status.new") }} {{ t("time.today") }}: 8</h2>
        <h2>{{ t("priority.high") }}: 3</h2>
    </div>
</body>
</html>