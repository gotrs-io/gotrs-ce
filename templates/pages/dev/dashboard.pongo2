<script>
function restartBackend() {
    if (!confirm('Restart the backend service?')) return;
    
    fetch('/dev/action/restart-backend', { method: 'POST' })
        .then(response => response.json())
        .then(data => {
            showToast(data.message, data.success ? 'success' : 'error');
        });
}

function clearCache() {
    if (!confirm('Clear all caches?')) return;
    
    fetch('/dev/action/clear-cache', { method: 'POST' })
        .then(response => response.json())
        .then(data => {
            showToast(data.message, data.success ? 'success' : 'error');
        });
}

function runTests() {
    window.location.href = '/dev/tests?run=true';
}

function checkHealth() {
    fetch('/health')
        .then(response => response.json())
        .then(data => {
            showToast('Service is ' + data.status, 'success');
        })
        .catch(() => {
            showToast('Service is not responding', 'error');
        });
}

function viewLogs() {
    window.location.href = '/dev/logs';
}

function showToast(message, type) {
    const toast = document.createElement('div');
    toast.className = `fixed bottom-4 right-4 px-6 py-3 rounded-lg text-white ${
        type === 'success' ? 'bg-green-600' : 'bg-red-600'
    }`;
    toast.textContent = message;
    document.body.appendChild(toast);
    
    setTimeout(() => {
        toast.remove();
    }, 3000);
}
</script>
