{% extends "layouts/base.pongo2" %}

{% block title %}{{ t("pages.agent.tickets.title")|default:"Ticket Management" }} - GOTRS{% endblock %}

{% block content %}
<div class="min-h-screen">
    <!-- Floating Bulk Actions Bar (appears when tickets are selected) -->
    {% if Tickets %}
    {% include "partials/agent/tickets/bulk_actions_bar.pongo2" %}
    {% endif %}

    <div class="container mx-auto px-4 py-8">
        <!-- Header -->
        <div class="mb-6 sm:flex sm:items-center sm:justify-between">
            <h1 class="text-3xl font-bold gk-text-gradient">{{ t("pages.agent.tickets.heading")|default:"Ticket Management" }}</h1>
            <div class="mt-4 sm:mt-0">
                <a href="/tickets/new" class="gk-btn-neon inline-flex items-center">
                    <svg class="-ml-0.5 mr-1.5 h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                        <path d="M10.75 4.75a.75.75 0 00-1.5 0v4.5h-4.5a.75.75 0 000 1.5h4.5v4.5a.75.75 0 001.5 0v-4.5h4.5a.75.75 0 000-1.5h-4.5v-4.5z" />
                    </svg>
                    {{ t("tickets.new_ticket") }}
                </a>
            </div>
        </div>

        <!-- Filters -->
        {% include "partials/agent/tickets/filters.pongo2" %}

        <!-- Ticket List -->
        <div id="ticket-list-container" class="gk-card-glow transition-all duration-300">
            {% include "partials/agent/tickets/table.pongo2" %}

            <!-- Bulk Selection Controls -->
            {% if Tickets %}
            {% include "partials/agent/tickets/bulk_selection.pongo2" %}
            {% endif %}

            <!-- Pagination -->
            {% if Pagination.TotalPages > 1 %}
            {% include "partials/tickets/pagination.pongo2" %}
            {% endif %}
        </div>
    </div>

    <!-- Bulk Action Modals -->
    {% include "partials/agent/tickets/bulk_modals/status.pongo2" %}
    {% include "partials/agent/tickets/bulk_modals/priority.pongo2" %}
    {% include "partials/agent/tickets/bulk_modals/queue.pongo2" %}
    {% include "partials/agent/tickets/bulk_modals/assign.pongo2" %}
    {% include "partials/agent/tickets/bulk_modals/merge.pongo2" %}

    <!-- Result Toast -->
    {% include "partials/toast.pongo2" with ToastID="bulk-result-toast" %}
</div>

<script>
// Selected tickets storage - persisted in sessionStorage for cross-page selections
const STORAGE_KEY = 'gotrs_bulk_selected_tickets';

// Load persisted selections from sessionStorage
function loadPersistedSelections() {
    try {
        const stored = sessionStorage.getItem(STORAGE_KEY);
        return stored ? JSON.parse(stored) : [];
    } catch (e) {
        return [];
    }
}

// Save selections to sessionStorage
function savePersistedSelections(ticketIds) {
    try {
        sessionStorage.setItem(STORAGE_KEY, JSON.stringify(ticketIds));
    } catch (e) {
        console.warn('Failed to persist selections:', e);
    }
}

// Initialize with persisted selections
let selectedTicketIds = loadPersistedSelections();

// On page load, restore checkbox states from persisted selections
document.addEventListener('DOMContentLoaded', function() {
    const persisted = loadPersistedSelections();
    if (persisted.length > 0) {
        document.querySelectorAll('.ticket-select').forEach(cb => {
            if (persisted.includes(parseInt(cb.value))) {
                cb.checked = true;
            }
        });
        updateSelectedCount();
    }
});

// Select all checkbox - only selects visible tickets on current page
document.getElementById('select-all').addEventListener('change', function() {
    const checkboxes = document.querySelectorAll('.ticket-select');
    checkboxes.forEach(cb => {
        cb.checked = this.checked;
    });
    updateSelectedCount();
});

// Individual checkbox change
document.querySelectorAll('.ticket-select').forEach(cb => {
    cb.addEventListener('change', updateSelectedCount);
});

function updateSelectedCount() {
    // Merge current page selections with persisted cross-page selections
    const currentPageSelected = [];
    const currentPageTicketIds = [];

    document.querySelectorAll('.ticket-select').forEach(cb => {
        const ticketId = parseInt(cb.value);
        currentPageTicketIds.push(ticketId);
        if (cb.checked) {
            currentPageSelected.push(ticketId);
        }
    });

    // Get persisted selections that are NOT on current page (preserve cross-page)
    const persisted = loadPersistedSelections();
    const crossPageSelections = persisted.filter(id => !currentPageTicketIds.includes(id));

    // Combine: cross-page selections + current page selections
    selectedTicketIds = [...crossPageSelections, ...currentPageSelected];

    // Save to sessionStorage
    savePersistedSelections(selectedTicketIds);

    const count = selectedTicketIds.length;

    // Update all ticket count spans
    document.querySelectorAll('[id$="-ticket-count"]').forEach(el => {
        el.textContent = count;
    });

    // Show/hide floating bulk actions bar and add/remove bottom padding
    const floatingBar = document.getElementById('floating-bulk-actions');
    const ticketListContainer = document.getElementById('ticket-list-container');

    if (floatingBar) {
        if (count > 0) {
            floatingBar.classList.remove('translate-y-full');
            // Add bottom margin to prevent bar from covering last rows
            if (ticketListContainer) {
                ticketListContainer.classList.add('mb-16');
            }
            // Update the text with count
            const textNode = document.getElementById('floating-selected-count');
            if (textNode) {
                const textSpan = textNode.querySelector('span[data-singular]');
                const singularText = textSpan ? textSpan.dataset.singular : 'ticket selected';
                const pluralText = textSpan ? textSpan.dataset.plural : 'tickets selected';
                const selectedText = count === 1 ? singularText : pluralText;
                const pageInfo = crossPageSelections.length > 0
                    ? ` (${currentPageSelected.length} {{ t("tickets.on_this_page")|default:"on this page" }})`
                    : '';
                textNode.innerHTML = `<span class="inline-flex items-center justify-center w-6 h-6 rounded-full mr-2" style="background: var(--gk-primary); box-shadow: var(--gk-glow-primary);">${count}</span> <span data-singular="${singularText}" data-plural="${pluralText}">${selectedText}</span>${pageInfo}`;
            }
        } else {
            floatingBar.classList.add('translate-y-full');
            // Remove bottom margin
            if (ticketListContainer) {
                ticketListContainer.classList.remove('mb-16');
            }
        }
    }
}

// Clear all ticket selections (including cross-page)
function clearAllSelections() {
    document.querySelectorAll('.ticket-select:checked').forEach(cb => {
        cb.checked = false;
    });
    const selectAll = document.getElementById('select-all');
    if (selectAll) {
        selectAll.checked = false;
    }
    // Clear persisted selections
    selectedTicketIds = [];
    savePersistedSelections([]);
    updateSelectedCount();
}

// Get selected tickets (all, including cross-page)
function getSelectedTickets() {
    return selectedTicketIds;
}

// Select all tickets matching current filter (across all pages)
async function selectAllMatching() {
    const btn = document.getElementById('select-all-matching');
    const originalText = btn.textContent;
    btn.textContent = '{{ t("messages.loading")|default:"Loading..." }}';
    btn.disabled = true;

    try {
        // Build query string from current URL params
        const urlParams = new URLSearchParams(window.location.search);
        const queryString = urlParams.toString();

        const response = await fetch(`/agent/api/tickets/ids?${queryString}`);
        if (!response.ok) {
            throw new Error('Failed to fetch ticket IDs');
        }

        const data = await response.json();

        if (data.ticket_ids && data.ticket_ids.length > 0) {
            // Add all fetched IDs to selection
            selectedTicketIds = data.ticket_ids;
            savePersistedSelections(selectedTicketIds);

            // Check boxes on current page that match
            document.querySelectorAll('.ticket-select').forEach(cb => {
                if (selectedTicketIds.includes(parseInt(cb.value))) {
                    cb.checked = true;
                }
            });

            updateSelectedCount();

            // Show info about selection
            let message = `Selected ${data.count} tickets`;
            if (data.limited) {
                message += ` (limited to ${data.max_limit}, ${data.total_count} total match)`;
                showToast(true, 'Selection Limited', `Selected first ${data.max_limit} of ${data.total_count} matching tickets`, 'bulk-result-toast');
            } else {
                showToast(true, 'All Selected', `Selected all ${data.count} matching tickets`, 'bulk-result-toast');
            }
        } else {
            showToast(false, 'No Tickets', 'No tickets match the current filter', 'bulk-result-toast');
        }
    } catch (error) {
        console.error('Error selecting all matching:', error);
        showToast(false, 'Error', 'Failed to select all matching tickets', 'bulk-result-toast');
    } finally {
        btn.textContent = originalText;
        btn.disabled = false;
    }
}

// Modal helpers
function openModal(modalId) {
    document.getElementById(modalId).classList.remove('hidden');
    document.body.style.overflow = 'hidden';
}

function closeModal(modalId) {
    document.getElementById(modalId).classList.add('hidden');
    document.body.style.overflow = '';
}

// Close modal on escape key
document.addEventListener('keydown', function(e) {
    if (e.key === 'Escape') {
        document.querySelectorAll('[id$="-modal"]:not(.hidden)').forEach(modal => {
            modal.classList.add('hidden');
        });
        document.body.style.overflow = '';
    }
});

// Toast notification - override partial's generic function with specific ID
function showToast(success, title, message, toastId = 'bulk-result-toast') {
    const toast = document.getElementById(toastId);
    const iconEl = document.getElementById(toastId + '-icon');
    const titleEl = document.getElementById(toastId + '-title');
    const messageEl = document.getElementById(toastId + '-message');

    if (success) {
        iconEl.innerHTML = '<svg class="h-6 w-6" style="color: var(--gk-success);" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>';
    } else {
        iconEl.innerHTML = '<svg class="h-6 w-6" style="color: var(--gk-error);" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>';
    }

    titleEl.textContent = title;
    messageEl.textContent = message;
    toast.classList.remove('hidden');

    // Auto-hide after 5 seconds
    setTimeout(() => hideToast(toastId), 5000);
}

function hideToast(toastId = 'bulk-result-toast') {
    document.getElementById(toastId).classList.add('hidden');
}

// Load options for selects
async function loadOptions(type, selectId) {
    try {
        const response = await fetch(`/agent/api/bulk-options?type=${type}`);
        const data = await response.json();
        const select = document.getElementById(selectId);

        // Clear existing options except first
        while (select.options.length > 1) {
            select.remove(1);
        }

        const items = data[type + 's'] || data[type] || [];
        items.forEach(item => {
            const option = document.createElement('option');
            option.value = item.id;
            option.textContent = item.name || item.login;
            if (item.isPending) {
                option.dataset.pending = 'true';
            }
            select.appendChild(option);
        });
    } catch (error) {
        console.error(`Failed to load ${type} options:`, error);
    }
}

// Bulk action openers
function bulkAssign() {
    const tickets = getSelectedTickets();
    if (tickets.length === 0) {
        showToast(false, '{{ t("messages.no_selection")|default:"No Selection" }}', '{{ t("messages.please_select_ticket")|default:"Please select at least one ticket" }}');
        return;
    }
    selectedTicketIds = tickets;
    document.getElementById('assign-ticket-count').textContent = tickets.length;
    loadOptions('agent', 'bulk-assign-select');
    openModal('bulk-assign-modal');
}

