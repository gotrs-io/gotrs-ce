# EditorConfig helps maintain consistent coding styles across different editors and IDEs
# editorconfig.org

root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Go files
[*.go]
indent_style = tab
indent_size = 4

# Go mod files
[go.{mod,sum}]
indent_style = tab
indent_size = 4

# Python files (for any scripts)
[*.py]
indent_size = 4

# Makefile
[Makefile]
indent_style = tab
indent_size = 4

# YAML files
[*.{yml,yaml}]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# JavaScript/TypeScript files
[*.{js,jsx,ts,tsx}]
indent_size = 2

# HTML files
[*.html]
indent_size = 2

# CSS/SCSS files
[*.{css,scss,sass,less}]
indent_size = 2

# Shell scripts
[*.{sh,bash}]
indent_size = 2

# SQL files
[*.sql]
indent_size = 2

# Markdown files
[*.{md,markdown}]
trim_trailing_whitespace = false
indent_size = 2

# Docker files
[{Dockerfile,Dockerfile.*}]
indent_size = 2

# Environment files
[.env*]
insert_final_newline = false

# Git files
[.git*]
indent_size = 2

# Config files
[*.{toml,ini,cfg,conf}]
indent_size = 2

# Protocol Buffers
[*.proto]
indent_size = 2

# XML files
[*.{xml,svg}]
indent_size = 2

# License files
[LICENSE*]
insert_final_newline = false