{% extends "layouts/base.pongo2" %}

{% block title %}Ticket #{{ ticket.tn }} - {{ ticket.title }} - GOTRS{% endblock %}

{% block styles %}
<style>
/* Table styles for article content - with !important to override prose styles */
.article-content table {
    border-collapse: collapse !important;
    width: 100% !important;
    border: 1px solid #d1d5db !important;
}

.article-content table th,
.article-content table td {
    border: 1px solid #d1d5db !important;
    padding: 0.5rem 0.75rem !important;
    text-align: left !important;
}

/* Dark mode table borders */
.dark .article-content table {
    border: 1px solid #4b5563 !important;
}

.dark .article-content table th,
.dark .article-content table td {
    border: 1px solid #4b5563 !important;
}

.article-content table th {
    background-color: #f9fafb !important;
    font-weight: 600 !important;
}

.dark .article-content table th {
    background-color: #1f2937 !important;
}

.article-content table tbody tr:nth-child(even) {
    background-color: #f9fafb !important;
}

.dark .article-content table tbody tr:nth-child(even) {
    background-color: rgba(31, 41, 55, 0.3) !important;
}

.article-content table tbody tr:hover {
    background-color: #f3f4f6 !important;
}

.dark .article-content table tbody tr:hover {
    background-color: rgba(55, 65, 81, 0.5) !important;
}
</style>
{% endblock %}

{% block scripts %}
{{ block.super }}
<script src="/static/js/tiptap.min.js"></script>
<script src="/static/js/tiptap-editor.js"></script>
{% endblock %}

{% block content %}
<div class="container mx-auto px-4 py-8">
    <!-- Header -->
    <div class="mb-6">
        <div class="flex items-center justify-between">
            <div>
                <nav class="flex mb-2" aria-label="Breadcrumb">
                    <ol class="flex items-center space-x-2">
                        <li><a href="/agent/dashboard" class="text-blue-600 hover:text-blue-700">Dashboard</a></li>
                        <li class="text-gray-400">/</li>
                        <li><a href="/agent/tickets" class="text-blue-600 hover:text-blue-700">Tickets</a></li>
                        <li class="text-gray-400">/</li>
                        <li class="text-gray-600">#{{ ticket.tn }}</li>
                    </ol>
                </nav>
                <h1 class="text-3xl font-bold text-gray-900 dark:text-white ticket-title">{{ ticket.title }}</h1>
                <div class="mt-2 flex items-center space-x-4">
                    <span class="px-2 py-1 text-xs rounded-full
                        {% if ticket.state_type == 'new' %}bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-200
                        {% elif ticket.state_type == 'open' %}bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-200
                        {% elif ticket.state_type == 'pending' %}bg-yellow-100 text-yellow-800 dark:bg-yellow-900 dark:text-yellow-200
                        {% elif ticket.state_type == 'closed' %}bg-gray-100 text-gray-800 dark:bg-gray-700 dark:text-gray-300
                        {% else %}bg-gray-100 text-gray-800{% endif %}">
                        {{ ticket.state }}
                    </span>
                    <span class="text-sm text-gray-600 dark:text-gray-400">Priority: {{ ticket.priority }}</span>
                    <span class="text-sm text-gray-600 dark:text-gray-400">Queue: {{ ticket.queue }}</span>
                </div>
            </div>
            <div class="flex space-x-2">
                <button onclick="replyToTicket()" class="px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700">
                    Reply
                </button>
                <button onclick="addNote({{ ticket.id }})" class="px-4 py-2 bg-gray-200 dark:bg-gray-700 text-gray-900 dark:text-white rounded hover:bg-gray-300 dark:hover:bg-gray-600">
                    Add Note
                </button>
                <!-- Actions Dropdown -->
                <div class="relative">
                    <button onclick="toggleDropdown('actionsDropdown')" class="px-4 py-2 bg-gray-200 dark:bg-gray-700 text-gray-900 dark:text-white rounded hover:bg-gray-300 dark:hover:bg-gray-600 inline-flex items-center">
                        Actions
                        <i class="fas fa-chevron-down ml-2"></i>
                    </button>
                    <div id="actionsDropdown" class="hidden absolute right-0 mt-2 w-56 bg-white dark:bg-gray-800 rounded-md shadow-lg z-10 border border-gray-200 dark:border-gray-600">
                        <div class="py-1">
                            <a href="#" onclick="changeStatus(); toggleDropdown('actionsDropdown')" class="block px-4 py-2 text-sm text-gray-700 dark:text-gray-200 hover:bg-gray-100 dark:hover:bg-gray-700">
                                <i class="fas fa-tasks mr-2"></i>Change Status
                            </a>
                            <a href="#" onclick="assignAgent(); toggleDropdown('actionsDropdown')" class="block px-4 py-2 text-sm text-gray-700 dark:text-gray-200 hover:bg-gray-100 dark:hover:bg-gray-700">
                                <i class="fas fa-user-check mr-2"></i>Assign Agent
                            </a>
                            <a href="#" onclick="changePriority(); toggleDropdown('actionsDropdown')" class="block px-4 py-2 text-sm text-gray-700 dark:text-gray-200 hover:bg-gray-100 dark:hover:bg-gray-700">
                                <i class="fas fa-flag mr-2"></i>Change Priority
                            </a>
                            <a href="#" onclick="moveQueue(); toggleDropdown('actionsDropdown')" class="block px-4 py-2 text-sm text-gray-700 dark:text-gray-200 hover:bg-gray-100 dark:hover:bg-gray-700">
                                <i class="fas fa-inbox mr-2"></i>Move to Queue
                            </a>
                            <a href="#" onclick="mergeTicket(); toggleDropdown('actionsDropdown')" class="block px-4 py-2 text-sm text-gray-700 dark:text-gray-200 hover:bg-gray-100 dark:hover:bg-gray-700">
                                <i class="fas fa-code-branch mr-2"></i>Merge Ticket
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Add hidden queue ID for JavaScript -->
    <div data-queue-id="{{ ticket.queue_id }}" style="display: none;"></div>

    <!-- Tabs: Conversation | History | Links -->
    <div class="mt-6 bg-white dark:bg-gray-800 rounded-lg shadow">
        <div class="px-6 py-3 border-b border-gray-200 dark:border-gray-700">
            <nav class="flex space-x-4" aria-label="Ticket tabs">
                <button id="tab-conversation" onclick="showTab('conversation')" class="px-3 py-2 text-sm font-medium text-gray-700 dark:text-gray-200 bg-gray-100 dark:bg-gray-700 rounded">Conversation</button>
                <button id="tab-history" hx-get="/agent/tickets/{{ ticket.id }}/history" hx-target="#tab-panel" hx-swap="innerHTML" class="px-3 py-2 text-sm font-medium text-gray-700 dark:text-gray-200 rounded">History</button>
                <button id="tab-links" hx-get="/agent/tickets/{{ ticket.id }}/links" hx-target="#tab-panel" hx-swap="innerHTML" class="px-3 py-2 text-sm font-medium text-gray-700 dark:text-gray-200 rounded">Links</button>
            </nav>
        </div>
        <div id="tab-panel">
            <!-- Default: Conversation content remains (articles) -->
            <div class="divide-y divide-gray-200 dark:divide-gray-700">
                {% for article in notes %}
                <div class="p-6"{% if article.sender_color %} style="border-left: 4px solid {{ article.sender_color }};"{% endif %}>
                    <div class="flex items-start space-x-4">
                        <div class="flex-shrink-0">
                            <div class="w-10 h-10 rounded-full bg-gray-300 dark:bg-gray-600 flex items-center justify-center">
                                <span class="text-sm font-medium text-gray-700 dark:text-gray-300">{{ article.from_name|first|upper }}</span>
                            </div>
                        </div>
                        <div class="flex-1">
                            <div class="flex items-center justify-between">
                                <h3 class="text-sm font-medium text-gray-900 dark:text-white">{{ article.from_name }}</h3>
                                <p class="text-sm text-gray-500 dark:text-gray-400">{{ article.create_time }}</p>
                            </div>
                            <div class="mt-2 max-w-none article-content">
                                {% if '<p' in article.body or '<div' in article.body or '<table' in article.body or '<br' in article.body or '<ul' in article.body or '<ol' in article.body or '<h1' in article.body or '<h2' in article.body or '<h3' in article.body %}
                                    <div data-article-body class="article-html">{{ article.body|safe }}</div>
                                {% else %}
                                    <div data-article-body class="article-plain">{{ article.body|escape }}</div>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>
                {% empty %}
                <div class="p-6 text-center text-gray-500 dark:text-gray-400">No articles yet</div>
                {% endfor %}
            </div>
        </div>
    </div>

    {% if ticket.pending_reminder %}
    <div class="mb-6">
    <div class="rounded-md border p-4 text-sm {% if ticket.pending_reminder_overdue %}border-red-300 bg-red-50 dark:border-red-700 dark:bg-red-900/30 text-red-900 dark:text-red-100{% else %}border-blue-200 bg-blue-50 dark:border-blue-400 dark:bg-blue-900/60 text-blue-900 dark:text-blue-50{% endif %}">
            <div class="font-medium">
                {% if ticket.pending_reminder_has_time %}
                    {% if ticket.pending_reminder_overdue %}
                        {{ t("tickets.pending_reminder.overdue")|default:"Reminder overdue" }}
                    {% else %}
                        {{ t("tickets.pending_reminder.scheduled")|default:"Reminder scheduled" }}
                    {% endif %}
                {% else %}
                    {{ t("tickets.pending_reminder.not_scheduled")|default:"Reminder not scheduled" }}
                {% endif %}
            </div>
            <p class="mt-1">
                {% if ticket.pending_reminder_has_time %}
                    {% if ticket.pending_reminder_overdue %}
                        {{ t("tickets.pending_reminder.was_scheduled_for")|default:"Reminder was scheduled for" }} <span class="font-semibold">{{ ticket.pending_reminder_at }}</span>{% if ticket.pending_reminder_relative and ticket.pending_reminder_at_iso %} (<span data-relative-time data-mode="duration" data-direction="past" data-timestamp="{{ ticket.pending_reminder_at_iso }}">{{ ticket.pending_reminder_relative }}</span> {{ t("tickets.pending_reminder.ago")|default:"ago" }}){% elif ticket.pending_reminder_relative %} ({{ ticket.pending_reminder_relative }} {{ t("tickets.pending_reminder.ago")|default:"ago" }}){% endif %}.
                    {% else %}
                        {{ t("tickets.pending_reminder.will_reopen_at")|default:"Ticket will re-open at" }} <span class="font-semibold">{{ ticket.pending_reminder_at }}</span>{% if ticket.pending_reminder_relative and ticket.pending_reminder_at_iso %} ({{ t("tickets.pending_reminder.in")|default:"in" }} <span data-relative-time data-mode="duration" data-direction="future" data-timestamp="{{ ticket.pending_reminder_at_iso }}">{{ ticket.pending_reminder_relative }}</span>){% elif ticket.pending_reminder_relative %} ({{ t("tickets.pending_reminder.in")|default:"in" }} {{ ticket.pending_reminder_relative }}){% endif %}.
                    {% endif %}
                {% else %}
                    {{ ticket.pending_reminder_message|default:t("tickets.pending_reminder.no_time_scheduled")|default:"No reminder time scheduled." }}
                {% endif %}
            </p>
        </div>
    </div>
    {% endif %}

    {% if ticket.auto_close_at %}
    <div class="mb-6">
        <div class="rounded-md border p-4 text-sm {% if ticket.auto_close_overdue %}border-red-300 bg-red-50 dark:border-red-700 dark:bg-red-900/30 text-red-900 dark:text-red-100{% else %}border-amber-200 bg-amber-50 dark:border-amber-600 dark:bg-amber-900/30 text-amber-900 dark:text-amber-100{% endif %}">
            <div class="font-medium">
                {% if ticket.auto_close_overdue %}
                    {{ t("tickets.auto_close.overdue")|default:"Auto-close overdue" }}
                {% else %}
                    {{ t("tickets.auto_close.scheduled")|default:"Auto-close scheduled" }}
                {% endif %}
            </div>
            <p class="mt-1">
                {% if ticket.auto_close_overdue %}
                    {{ t("tickets.auto_close.should_have_closed_at")|default:"Ticket should have auto-closed at" }} <span class="font-semibold">{{ ticket.auto_close_at }}</span>{% if ticket.auto_close_relative and ticket.auto_close_at_iso %} (<span data-relative-time data-mode="duration" data-direction="past" data-timestamp="{{ ticket.auto_close_at_iso }}">{{ ticket.auto_close_relative }}</span> {{ t("tickets.pending_reminder.ago")|default:"ago" }}){% elif ticket.auto_close_relative %} ({{ ticket.auto_close_relative }} {{ t("tickets.pending_reminder.ago")|default:"ago" }}){% endif %}.
                {% else %}
                    {{ t("tickets.auto_close.will_close_at")|default:"Ticket will auto-close" }}{% if ticket.auto_close_pending %} {{ t("tickets.auto_close.while_pending")|default:"while in pending auto close state" }}{% endif %} {{ t("tickets.auto_close.at")|default:"at" }} <span class="font-semibold">{{ ticket.auto_close_at }}</span>{% if ticket.auto_close_relative and ticket.auto_close_at_iso %} ({{ t("tickets.pending_reminder.in")|default:"in" }} <span data-relative-time data-mode="duration" data-direction="future" data-timestamp="{{ ticket.auto_close_at_iso }}">{{ ticket.auto_close_relative }}</span>){% elif ticket.auto_close_relative %} ({{ t("tickets.pending_reminder.in")|default:"in" }} {{ ticket.auto_close_relative }}){% endif %}.
                {% endif %}
            </p>
        </div>
    </div>
    {% endif %}

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
        <!-- Main Content -->
        <div class="lg:col-span-2">
            <!-- Articles -->
            <div class="bg-white dark:bg-gray-800 rounded-lg shadow"{% if first_article_sender_color %} style="border-left: 4px solid {{ first_article_sender_color }};"{% endif %}>
                <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-700">
                    <h2 class="text-lg font-semibold text-gray-900 dark:text-white">Conversation</h2>
                </div>
                <div class="divide-y divide-gray-200 dark:divide-gray-700">
                    {% for article in notes %}
                    <div class="p-6"{% if article.sender_color %} style="border-left: 4px solid {{ article.sender_color }};"{% endif %}>
                        <div class="flex items-start space-x-4">
                            <div class="flex-shrink-0">
                                <div class="w-10 h-10 rounded-full bg-gray-300 dark:bg-gray-600 flex items-center justify-center">
                                    <span class="text-sm font-medium text-gray-700 dark:text-gray-300">
                                        {{ article.from_name|first|upper }}
                                    </span>
                                </div>
                            </div>
                            <div class="flex-1">
                                <div class="flex items-center justify-between">
                                    <h3 class="text-sm font-medium text-gray-900 dark:text-white">
                                        {{ article.from_name }}
                                        {% if article.sender_type == 'agent' %}
                                        <span class="ml-2 px-2 py-1 text-xs bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-200 rounded">Agent</span>
                                        {% elif article.sender_type == 'customer' %}
                                        <span class="ml-2 px-2 py-1 text-xs bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-200 rounded">Customer</span>
                                        {% else %}
                                        <span class="ml-2 px-2 py-1 text-xs bg-gray-100 text-gray-800 dark:bg-gray-700 dark:text-gray-300 rounded">System</span>
                                        {% endif %}
                                    </h3>
                                    <p class="text-sm text-gray-500 dark:text-gray-400">{{ article.create_time }}</p>
                                </div>
                                <div class="mt-2 text-sm text-gray-700 dark:text-gray-300">
                                    <p>{{ article.subject }}</p>
                                </div>
                                <div class="mt-2 max-w-none article-content">
                                    {# Treat as HTML only if we see common block/line break tags. Otherwise preserve whitespace. #}
                                    {% if '<p' in article.body or '<div' in article.body or '<table' in article.body or '<br' in article.body or '<ul' in article.body or '<ol' in article.body or '<h1' in article.body or '<h2' in article.body or '<h3' in article.body %}
                                        <div data-article-body class="prose prose-sm dark:prose-invert text-sm text-gray-800 dark:text-gray-200 indent-0">{{ article.body|safe }}</div>
                                    {% else %}
                                        <div data-article-body class="whitespace-pre-wrap break-words font-mono text-sm text-gray-800 dark:text-gray-200 indent-0">{{ article.body }}</div>
                                    {% endif %}
                                </div>
                                {% if article.attachments %}
                                <div class="mt-4">
                                    <h4 class="text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wide mb-2">Attachments</h4>
                                    <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 gap-2">
                                        {% for attachment in article.attachments %}
                                        <div class="relative group bg-gray-50 dark:bg-gray-900/50 rounded-lg p-2 hover:bg-gray-100 dark:hover:bg-gray-800 transition-colors">
                                            {% if attachment.content_type and attachment.content_type|slice:":5" == "image" %}
                                            <!-- Image preview -->
                                            <div class="aspect-square mb-1 overflow-hidden rounded bg-gray-200 dark:bg-gray-700">
                                                <img data-attachment-url="/agent/tickets/{{ ticket.id }}/articles/{{ article.id }}/attachments/{{ attachment.id }}"
                                                     alt="{{ attachment.filename }}"
                                                     class="w-full h-full object-cover cursor-pointer attachment-image"
                                                     onclick="showImagePreview(this.src, '{{ attachment.filename }}')"
                                                     loading="lazy">
                                            </div>
                                            {% else %}
                                            <!-- File icon -->
                                            <div class="flex justify-center items-center h-16 mb-1">
                                                {% if attachment.content_type == "application/pdf" %}
                                                <svg class="h-12 w-12 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z"></path>
                                                </svg>
                                                {% else %}
                                                <svg class="h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.172 7l-6.586 6.586a2 2 0 102.828 2.828l6.414-6.586a4 4 0 00-5.656-5.656l-6.415 6.585a6 6 0 108.486 8.486L20.5 13"></path>
                                                </svg>
                                                {% endif %}
                                            </div>
                                            {% endif %}
                                            <div class="text-xs">
                                                <p class="truncate font-medium text-gray-900 dark:text-white" title="{{ attachment.filename }}">
                                                    {{ attachment.filename }}
                                                </p>
                                                <p class="text-gray-500 dark:text-gray-400">{{ attachment.size }}</p>
                                            </div>
                                            <a href="/agent/tickets/{{ ticket.id }}/articles/{{ article.id }}/attachments/{{ attachment.id }}"
                                               download="{{ attachment.filename }}"
                                               class="absolute inset-0 rounded-lg ring-2 ring-transparent hover:ring-blue-500 transition-all"
                                               title="Download {{ attachment.filename }}">
                                                <span class="sr-only">Download</span>
                                            </a>
                                        </div>
                                        {% endfor %}
                                    </div>
                                </div>
                                {% endif %}
                                {% if article.dynamic_fields %}
                                <!-- Article Dynamic Fields -->
                                <div class="mt-4 border-t border-gray-200 dark:border-gray-700 pt-4">
                                    <h4 class="text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wide mb-2">{{ t("dynamic_fields.article_fields")|default:"Article Fields" }}</h4>
                                    <dl class="grid grid-cols-2 gap-2 text-sm">
                                        {% for df in article.dynamic_fields %}
                                        <div>
                                            <dt class="text-gray-500 dark:text-gray-400">{{ df.Label }}</dt>
                                            <dd class="text-gray-900 dark:text-white">{{ df.DisplayValue|default:"-" }}</dd>
                                        </div>
                                        {% endfor %}
                                    </dl>
                                </div>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                    {% empty %}
                    <div class="p-6 text-center text-gray-500 dark:text-gray-400">
                        No articles yet
                    </div>
                    {% endfor %}
                </div>
            </div>
        </div>

        <!-- Sidebar -->
        <div class="space-y-6">
            <!-- Ticket Details -->
            <div class="bg-white dark:bg-gray-800 rounded-lg shadow">
                <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-700">
                    <h2 class="text-lg font-semibold text-gray-900 dark:text-white">Details</h2>
                </div>
                <div class="p-6 space-y-4">
                    <div>
                        <label class="block text-sm font-medium text-gray-700 dark:text-gray-300">Ticket Number</label>
                        <p class="mt-1 text-sm text-gray-900 dark:text-white">#{{ ticket.tn }}</p>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700 dark:text-gray-300">Customer</label>
                        <p class="mt-1 text-sm text-gray-900 dark:text-white">
                            {{ ticket.customer_name|default:ticket.customer_user_id|default:"-" }}
                            {% if ticket.customer_company %}
                            <br><span class="text-xs text-gray-500">{{ ticket.customer_company }}</span>
                            {% endif %}
                        </p>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700 dark:text-gray-300">Assigned To</label>
                        <p class="mt-1 text-sm text-gray-900 dark:text-white">
                            {{ ticket.assigned_to|default:"Unassigned" }}
                        </p>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700 dark:text-gray-300">Created</label>
                        <p class="mt-1 text-sm text-gray-900 dark:text-white">{{ ticket.create_time }}</p>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700 dark:text-gray-300">Last Updated</label>
                        <p class="mt-1 text-sm text-gray-900 dark:text-white">{{ ticket.change_time }}</p>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700 dark:text-gray-300">Type</label>
                        <p class="mt-1 text-sm text-gray-900 dark:text-white">{{ ticket.type|default:"Unclassified" }}</p>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700 dark:text-gray-300">Service</label>
                        <p class="mt-1 text-sm text-gray-900 dark:text-white">{{ ticket.service|default:"-" }}</p>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700 dark:text-gray-300">SLA</label>
                        <p class="mt-1 text-sm text-gray-900 dark:text-white">{{ ticket.sla|default:"-" }}</p>
                    </div>
                </div>
            </div>

            <!-- Quick Actions -->
            <div class="bg-white dark:bg-gray-800 rounded-lg shadow">
                <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-700">
                    <h2 class="text-lg font-semibold text-gray-900 dark:text-white">Quick Actions</h2>
                </div>
                <div class="p-6 space-y-3">
                    <button onclick="changeStatus()" class="w-full px-4 py-2 text-left text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700 rounded">
                        Change Status
                    </button>
                    <button onclick="assignAgent()" class="w-full px-4 py-2 text-left text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700 rounded">
                        Assign Agent
                    </button>
                    <button onclick="changePriority()" class="w-full px-4 py-2 text-left text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700 rounded">
                        Change Priority
                    </button>
                    <button onclick="moveQueue()" class="w-full px-4 py-2 text-left text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700 rounded">
                        Move to Queue
                    </button>
                    <button onclick="mergeTicket()" class="w-full px-4 py-2 text-left text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700 rounded">
                        Merge Ticket
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Reply Modal - Enhanced with OTRS feature parity -->
<div id="replyModal" class="hidden fixed inset-0 bg-gray-500 bg-opacity-75 overflow-y-auto z-50">
    <div class="flex min-h-full items-center justify-center p-4">
        <div class="relative bg-white dark:bg-gray-800 rounded-lg shadow-xl w-full max-w-4xl max-h-[90vh] overflow-y-auto">
            <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-700">
                <h3 class="text-lg font-semibold text-gray-900 dark:text-white">Compose Reply</h3>
            </div>
            <form id="replyForm" onsubmit="submitReply(event)">
                <div class="p-6 space-y-4">
                    <!-- Communication Type and Visibility -->
                    <div class="grid grid-cols-2 gap-4">
                        <div>
                            <label class="block text-sm font-medium text-gray-700 dark:text-gray-300">Type</label>
                            <select name="communication_channel_id" id="replyCommunicationType" onchange="updateReplyVisibility()"
                                    class="mt-1 w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg dark:bg-gray-700 dark:text-white">
                                <option value="1" selected>Email-External</option>
                                <option value="3">Email-Internal</option>
                                <option value="2">Phone</option>
                                <option value="4">Chat</option>
                            </select>
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-700 dark:text-gray-300">Next State</label>
                            <select name="next_state_id" class="mt-1 w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg dark:bg-gray-700 dark:text-white">
                                <option value="">Keep current state</option>
                                <option value="2">open</option>
                                <option value="4">pending reminder</option>
                                <option value="7">closed successful</option>
                                <option value="8">closed unsuccessful</option>
                            </select>
                        </div>
                    </div>

                    <!-- Recipients -->
                    <div>
                        <label class="block text-sm font-medium text-gray-700 dark:text-gray-300">To</label>
                        <select id="customerUserSelect" name="to" required
                                class="mt-1 w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg dark:bg-gray-700 dark:text-white">
                            <option value="{{ ticket.customer_user_id }}">{{ ticket.customer_user_id }}</option>
                        </select>
                        <div class="mt-1 text-xs text-gray-500 dark:text-gray-400">
                            Loading customer users...
                        </div>
                    </div>

                    <!-- Expandable Cc/Bcc -->
                    <div>
                        <button type="button" onclick="toggleCcBcc()" class="text-sm text-blue-600 hover:text-blue-700 dark:text-blue-400">
                            + Add Cc/Bcc
                        </button>
                        <div id="ccBccFields" class="hidden mt-2 space-y-2">
                            <div>
                                <label class="block text-sm font-medium text-gray-700 dark:text-gray-300">Cc</label>
                                <input type="email" name="cc" multiple placeholder="Separate multiple emails with commas"
                                       class="mt-1 w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg dark:bg-gray-700 dark:text-white">
                            </div>
                            <div>
                                <label class="block text-sm font-medium text-gray-700 dark:text-gray-300">Bcc</label>
                                <input type="email" name="bcc" multiple placeholder="Separate multiple emails with commas"
                                       class="mt-1 w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg dark:bg-gray-700 dark:text-white">
                            </div>
                        </div>
                    </div>

                    <!-- Subject -->
                    <div>
                        <label class="block text-sm font-medium text-gray-700 dark:text-gray-300">Subject</label>
                        <input type="text" name="subject" value="Re: {{ ticket.title }}" required
                               class="mt-1 w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg dark:bg-gray-700 dark:text-white">
                    </div>

                    <!-- Template Selection -->
                    <!-- Template Selection -->
                    {% include "partials/template_selector.pongo2" with QueueID=ticket.queue_id TicketID=ticket.id TemplateType="Answer" TargetEditorID="replyEditorInner" SelectID="replyTemplateSelect" %}

                    <!-- Message with Quote Option -->
                    <div>
                        <div class="flex justify-between items-center mb-2">
                            <label id="replyEditorLabel" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Message</label>
                            <label class="flex items-center text-sm">
                                <input type="checkbox" name="quote_original" class="mr-2 rounded border-gray-300 dark:border-gray-600">
                                <span class="text-gray-700 dark:text-gray-300">Quote original message</span>
                            </label>
                        </div>
                        <div id="replyEditor" class="mt-1">
                            {% include "partials/rich_text_editor.pongo2" with EditorID="replyEditorInner" FieldName="body" Placeholder="Write your reply here..." MinHeight="120px" LabelID="replyEditorLabel" %}
                        </div>
                    </div>

                    <!-- Attachments -->
                    <div>
                        <label class="block text-sm font-medium text-gray-700 dark:text-gray-300">Attachments</label>
                        <input type="file" name="attachments" multiple
                               class="mt-1 w-full text-sm text-gray-900 dark:text-gray-300 file:mr-4 file:py-2 file:px-4 file:rounded file:border-0 file:text-sm file:font-semibold file:bg-blue-50 file:text-blue-700 hover:file:bg-blue-100 dark:file:bg-gray-700 dark:file:text-gray-300">
                        <div id="reply-template-attachments" class="mt-2"></div>
                    </div>

                    <!-- Time Accounting -->
                    <div class="grid grid-cols-2 gap-4">
                        <div>
                            <label class="block text-sm font-medium text-gray-700 dark:text-gray-300">Time Units (minutes)</label>
                            <input type="number" name="time_units" min="0" step="1" placeholder="0"
                                   class="mt-1 w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg dark:bg-gray-700 dark:text-white">
                        </div>
                        <div>
                            <label class="flex items-center text-sm mt-7">
                                <input type="checkbox" name="is_visible_for_customer" id="replyVisibility" value="1" checked
                                       class="mr-2 rounded border-gray-300 dark:border-gray-600">
                                <span class="text-gray-700 dark:text-gray-300">Visible to Customer</span>
                            </label>
                        </div>
                    </div>
                </div>

                <div class="px-6 py-4 border-t border-gray-200 dark:border-gray-700 flex justify-between">
                    <button type="button" onclick="saveDraft()"
                            class="px-4 py-2 text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700 rounded">
                        Save as Draft
                    </button>
                    <div class="space-x-3">
                        <button type="button" onclick="closeModal('replyModal')"
                                class="px-4 py-2 text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700 rounded">
                            Cancel
