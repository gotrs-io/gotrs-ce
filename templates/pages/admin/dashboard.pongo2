{% extends "layouts/base.pongo2" %}

{% block title %}{{ t("admin.dashboard") }} - {{ t("app.name") }}{% endblock %}

{% block content %}
<div class="container mx-auto px-4 py-8">
    <header class="mb-8">
        <h1 class="text-3xl font-bold text-gray-900 dark:text-white">{{ t("admin.dashboard") }}</h1>
        <p class="mt-2 text-sm text-gray-600 dark:text-gray-400">{{ t("admin.dashboard_description")|default:"System configuration overview" }}</p>
        <span class="sr-only">System Administration</span>
        <span class="sr-only">Audit Logs</span>
    </header>

    <section aria-labelledby="admin-stats">
        <h2 id="admin-stats" class="sr-only">Key metrics</h2>
        <div class="grid grid-cols-1 gap-5 sm:grid-cols-2 lg:grid-cols-4">
            <article class="bg-white dark:bg-gray-800 shadow rounded-lg p-5">
                <h3 class="text-sm font-medium text-gray-500 dark:text-gray-400">{{ t("admin.total_users") }}</h3>
                <p class="mt-2 text-2xl font-semibold text-gray-900 dark:text-white">{{ UserCount|default:"0" }}</p>
                <p class="mt-1 text-xs text-gray-500 dark:text-gray-400">Active agents and customers</p>
            </article>
            <article class="bg-white dark:bg-gray-800 shadow rounded-lg p-5">
                <h3 class="text-sm font-medium text-gray-500 dark:text-gray-400">{{ t("admin.total_groups") }}</h3>
                <p class="mt-2 text-2xl font-semibold text-gray-900 dark:text-white">{{ GroupCount|default:"0" }}</p>
                <p class="mt-1 text-xs text-gray-500 dark:text-gray-400">{{ t("admin.group_management") }}</p>
            </article>
            <article class="bg-white dark:bg-gray-800 shadow rounded-lg p-5">
                <h3 class="text-sm font-medium text-gray-500 dark:text-gray-400">{{ t("admin.active_tickets") }}</h3>
                <p class="mt-2 text-2xl font-semibold text-gray-900 dark:text-white">{{ ActiveTickets|default:"0" }}</p>
                <p class="mt-1 text-xs text-gray-500 dark:text-gray-400">Queues monitored: {{ QueueCount|default:"0" }}</p>
            </article>
            <article class="bg-white dark:bg-gray-800 shadow rounded-lg p-5">
                <h3 class="text-sm font-medium text-gray-500 dark:text-gray-400">System Health</h3>
                <p class="mt-2 text-2xl font-semibold text-green-600 dark:text-green-400">99.9%</p>
                <p class="mt-1 text-xs text-gray-500 dark:text-gray-400">uptime this month</p>
            </article>
        </div>
    </section>

    <section class="mt-10" aria-labelledby="admin-actions">
        <h2 id="admin-actions" class="text-xl font-semibold text-gray-900 dark:text-white">System Administration</h2>
        <div class="mt-4 grid grid-cols-1 gap-4 sm:grid-cols-2 lg:grid-cols-3">
            <a href="/admin/users" class="block bg-white dark:bg-gray-800 shadow rounded-lg p-5 hover:shadow-lg focus:outline-none focus:ring-2 focus:ring-gotrs-500">
                <h3 class="text-lg font-medium text-gray-900 dark:text-white">User Management</h3>
                <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">Manage agent and customer accounts</p>
            </a>
            <a href="/admin/groups" class="block bg-white dark:bg-gray-800 shadow rounded-lg p-5 hover:shadow-lg focus:outline-none focus:ring-2 focus:ring-gotrs-500">
                <h3 class="text-lg font-medium text-gray-900 dark:text-white">Group Management</h3>
                <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">Configure teams and escalation paths</p>
            </a>
            <a href="/admin/permissions" class="block bg-white dark:bg-gray-800 shadow rounded-lg p-5 hover:shadow-lg focus:outline-none focus:ring-2 focus:ring-gotrs-500">
                <h3 class="text-lg font-medium text-gray-900 dark:text-white">Permissions</h3>
                <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">Adjust agent access levels</p>
            </a>
            <a href="/admin/settings" class="block bg-white dark:bg-gray-800 shadow rounded-lg p-5 hover:shadow-lg focus:outline-none focus:ring-2 focus:ring-gotrs-500">
                <h3 class="text-lg font-medium text-gray-900 dark:text-white">System Configuration</h3>
                <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">Tune platform preferences</p>
            </a>
            <a href="/admin/reports" class="block bg-white dark:bg-gray-800 shadow rounded-lg p-5 hover:shadow-lg focus:outline-none focus:ring-2 focus:ring-gotrs-500">
                <h3 class="text-lg font-medium text-gray-900 dark:text-white">{{ "Reports & Analytics"|safe }}</h3>
                <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">Track performance insights</p>
            </a>
            <a href="/admin/logs" class="block bg-white dark:bg-gray-800 shadow rounded-lg p-5 hover:shadow-lg focus:outline-none focus:ring-2 focus:ring-gotrs-500">
                <h3 class="text-lg font-medium text-gray-900 dark:text-white">Audit Logs</h3>
                <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">Review administrative actions</p>
            </a>
        </div>
    </section>

    <section class="mt-10" aria-labelledby="recent-activity">
        <h2 id="recent-activity" class="text-xl font-semibold text-gray-900 dark:text-white">Recent Admin Activity</h2>
        <div class="mt-4 bg-white dark:bg-gray-800 shadow rounded-lg">
            <ul class="divide-y divide-gray-100 dark:divide-gray-700">
                <li class="flex items-center justify-between px-5 py-3 bg-gray-50 dark:bg-gray-700">
                    <span class="text-sm text-gray-700 dark:text-gray-200">User account created</span>
                    <span class="text-xs text-gray-500 dark:text-gray-300">5 minutes ago</span>
                </li>
                <li class="flex items-center justify-between px-5 py-3">
                    <span class="text-sm text-gray-700 dark:text-gray-200">System configuration updated</span>
                    <span class="text-xs text-gray-500 dark:text-gray-300">12 minutes ago</span>
                </li>
                <li class="flex items-center justify-between px-5 py-3">
                    <span class="text-sm text-gray-700 dark:text-gray-200">Audit logs reviewed</span>
                    <span class="text-xs text-gray-500 dark:text-gray-300">30 minutes ago</span>
                </li>
            </ul>
        </div>
    </section>
</div>
{% endblock %}