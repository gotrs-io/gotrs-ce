{% extends "layouts/base.pongo2" %}

{% block title %}{{ t("pages.agent.dashboard.title")|default:"Agent Dashboard" }} - GOTRS{% endblock %}

{% block content %}
<div class="container mx-auto px-4 py-8 min-h-screen">
    <!-- Header -->
    <div class="mb-8">
        <h1 class="text-3xl font-bold gk-heading"><span class="gk-text-gradient">{{ t("pages.agent.dashboard.title")|default:"Agent Dashboard" }}</span></h1>
        <p class="mt-2" style="color: var(--gk-text-muted);">{{ t("dashboard.welcome_back")|default:"Welcome back! Here's your ticket overview." }}</p>
    </div>

    <!-- Statistics Cards -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-6 gap-4 mb-8">
        <!-- My Open Tickets -->
        <div class="gk-card-glow rounded-lg p-6">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm font-medium" style="color: var(--gk-text-muted);">{{ t("dashboard.stats.my_open")|default:"My Open" }}</p>
                    <p class="text-2xl font-bold" style="color: var(--gk-text-primary);">{{ Stats.OpenTickets }}</p>
                </div>
                <div style="color: var(--gk-primary);">
                    <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
                    </svg>
                </div>
            </div>
        </div>

        <!-- My Pending Tickets -->
        <div class="gk-card-glow rounded-lg p-6">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm font-medium" style="color: var(--gk-text-muted);">{{ t("dashboard.stats.my_pending")|default:"My Pending" }}</p>
                    <p class="text-2xl font-bold" style="color: var(--gk-text-primary);">{{ Stats.PendingTickets }}</p>
                </div>
                <div style="color: var(--gk-warning);">
                    <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                </div>
            </div>
        </div>

        <!-- Unassigned in My Queues -->
        <div class="gk-card-glow rounded-lg p-6">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm font-medium" style="color: var(--gk-text-muted);">{{ t("dashboard.stats.unassigned")|default:"Unassigned" }}</p>
                    <p class="text-2xl font-bold" style="color: var(--gk-text-primary);">{{ Stats.UnassignedInMyQueues }}</p>
                </div>
                <div style="color: var(--gk-accent);">
                    <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"></path>
                    </svg>
                </div>
            </div>
        </div>

        <!-- New Today -->
        <div class="gk-card-glow rounded-lg p-6">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm font-medium" style="color: var(--gk-text-muted);">{{ t("dashboard.stats.new_today")|default:"New Today" }}</p>
                    <p class="text-2xl font-bold" style="color: var(--gk-text-primary);">{{ Stats.NewToday }}</p>
                </div>
                <div style="color: var(--gk-success);">
                    <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                    </svg>
                </div>
            </div>
        </div>

        <!-- Closed Today -->
        <div class="gk-card-glow rounded-lg p-6">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm font-medium" style="color: var(--gk-text-muted);">{{ t("dashboard.stats.closed_today")|default:"Closed Today" }}</p>
                    <p class="text-2xl font-bold" style="color: var(--gk-text-primary);">{{ Stats.ClosedToday }}</p>
                </div>
                <div style="color: var(--gk-accent);">
                    <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                </div>
            </div>
        </div>

        <!-- Total Assigned -->
        <div class="gk-card-glow rounded-lg p-6">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm font-medium" style="color: var(--gk-text-muted);">{{ t("dashboard.stats.total_assigned")|default:"Total Assigned" }}</p>
                    <p class="text-2xl font-bold" style="color: var(--gk-text-primary);">{{ Stats.MyTickets }}</p>
                </div>
                <div style="color: var(--gk-primary);">
                    <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                    </svg>
                </div>
            </div>
        </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
        <!-- Recent Tickets -->
        <div class="lg:col-span-2">
            <div class="gk-card-glow rounded-lg overflow-hidden">
                <div class="px-6 py-4" style="border-bottom: 1px solid var(--gk-border);">
                    <div class="flex items-center justify-between">
                        <h2 class="text-lg font-semibold" style="color: var(--gk-text-primary);">{{ t("dashboard.recent_tickets")|default:"Recent Tickets" }}</h2>
                        <a href="/agent/tickets" class="text-sm hover:underline" style="color: var(--gk-primary);">
                            {{ t("common.view_all")|default:"View all" }} →
                        </a>
                    </div>
                </div>
                <div class="overflow-x-auto">
                    <table class="gk-table">
                        <thead>
                            <tr>
                                <th>{{ t("tickets.table.ticket")|default:"Ticket" }}</th>
                                <th>{{ t("tickets.table.customer")|default:"Customer" }}</th>
                                <th>{{ t("tickets.table.queue")|default:"Queue" }}</th>
                                <th>{{ t("tickets.table.state")|default:"State" }}</th>
                                <th>{{ t("tickets.table.age")|default:"Age" }}</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for ticket in RecentTickets %}
                            <tr class="transition-colors hover:bg-white/5 cursor-pointer" onclick="window.location='/ticket/{{ ticket.tn }}'">
                                <td class="whitespace-nowrap">
                                    <div>
                                        <div class="text-sm font-medium" style="color: var(--gk-text-primary);">
                                            #{{ ticket.tn }}
                                        </div>
                                        <div class="text-sm truncate max-w-xs" style="color: var(--gk-text-muted);">
                                            {{ ticket.title }}
                                        </div>
                                    </div>
                                </td>
                                <td class="whitespace-nowrap text-sm" style="color: var(--gk-text-primary);">
                                    {{ ticket.customer|default:"-" }}
                                </td>
                                <td class="whitespace-nowrap text-sm" style="color: var(--gk-text-primary);">
                                    {{ ticket.queue }}
                                </td>
                                <td class="whitespace-nowrap">
                                    <span class="gk-badge
                                        {% if 'new' in ticket.state|lower %}gk-badge-success{% endif %}
                                        {% if 'open' in ticket.state|lower %}gk-badge-accent{% endif %}
                                        {% if 'pending' in ticket.state|lower %}gk-badge-warning{% endif %}
                                        {% if 'closed' in ticket.state|lower %}gk-badge-muted{% endif %}">
                                        {{ ticket.state }}
                                    </span>
                                </td>
                                <td class="whitespace-nowrap text-sm" style="color: var(--gk-text-muted);">
                                    {% if ticket.created_at_iso %}<span data-relative-time data-mode="since" data-direction="past" data-timestamp="{{ ticket.created_at_iso }}">{{ ticket.age }}</span>{% else %}{{ ticket.age }}{% endif %}
                                </td>
                            </tr>
                            {% empty %}
                            <tr>
                                <td colspan="5" class="px-6 py-4 text-center" style="color: var(--gk-text-muted);">
                                    {{ t("dashboard.no_tickets_found")|default:"No tickets found" }}
                                </td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- My Queues -->
        <div>
            <div class="gk-card-glow rounded-lg overflow-hidden">
                <div class="px-6 py-4" style="border-bottom: 1px solid var(--gk-border);">
                    <div class="flex items-center justify-between">
                        <h2 class="text-lg font-semibold" style="color: var(--gk-text-primary);">{{ t("dashboard.my_queues")|default:"My Queues" }}</h2>
                        <a href="/agent/queues" class="text-sm hover:underline" style="color: var(--gk-primary);">
                            {{ t("common.manage")|default:"Manage" }} →
                        </a>
                    </div>
                </div>
                <div class="p-6">
                    <div class="space-y-4">
                        {% for queue in Queues %}
                        <div class="flex items-center justify-between p-3 rounded-lg transition-colors hover:bg-white/10 cursor-pointer" style="background: var(--gk-bg-tertiary);"
                             onclick="window.location='/agent/queues/{{ queue.id }}'">
                            <div>
                                <div class="font-medium" style="color: var(--gk-text-primary);">{{ queue.name }}</div>
                                <div class="text-sm" style="color: var(--gk-text-muted);">
                                    {{ queue.ticket_count }} tickets
                                    {% if queue.unassigned_count > 0 %}
                                    <span style="color: var(--gk-warning);">
                                        ({{ queue.unassigned_count }} unassigned)
                                    </span>
                                    {% endif %}
                                </div>
                            </div>
                            <svg class="w-5 h-5" style="color: var(--gk-text-muted);" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                            </svg>
                        </div>
                        {% empty %}
                        <p class="text-center" style="color: var(--gk-text-muted);">{{ t("dashboard.no_queues_assigned")|default:"No queues assigned" }}</p>
                        {% endfor %}
                    </div>
                </div>
            </div>

            <!-- Quick Actions -->
            <div class="mt-6 gk-card-glow rounded-lg overflow-hidden">
                <div class="px-6 py-4" style="border-bottom: 1px solid var(--gk-border);">
                    <h2 class="text-lg font-semibold" style="color: var(--gk-text-primary);">{{ t("dashboard.quick_actions")|default:"Quick Actions" }}</h2>
                </div>
                <div class="p-6">
                    <div class="space-y-3">
                        <a href="/tickets/new?type=phone" class="gk-btn-neon flex items-center justify-center w-full">
                            <i class="fa-solid fa-phone mr-2"></i>
                            {{ t("tickets.new.phone_ticket") }}
                        </a>
                        <a href="/tickets/new?type=email" class="gk-btn-secondary flex items-center justify-center w-full" style="background: rgba(var(--gk-success-rgb), 0.2); color: var(--gk-success);">
                            <i class="fa-solid fa-envelope mr-2"></i>
                            {{ t("tickets.new.email_ticket") }}
                        </a>
                        <a href="/agent/search" class="gk-btn-secondary flex items-center justify-center w-full">
                            {{ t("tickets.search_tickets")|default:"Search Tickets" }}
                        </a>
                        <a href="/agent/customers" class="gk-btn-secondary flex items-center justify-center w-full">
                            {{ t("tickets.customer_directory")|default:"Customer Directory" }}
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
