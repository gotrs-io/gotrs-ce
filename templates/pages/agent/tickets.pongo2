{% extends "layouts/base.pongo2" %}

{% block title %}Ticket Management - GOTRS{% endblock %}

{% block content %}
<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <!-- Header -->
    <div class="mb-6 sm:flex sm:items-center sm:justify-between">
        <h1 class="text-3xl font-bold text-gray-900 dark:text-white">Ticket Management</h1>
        <div class="mt-4 sm:mt-0">
            <a href="/tickets/new" 
               class="inline-flex items-center rounded-md bg-gotrs-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-gotrs-500">
                <svg class="-ml-0.5 mr-1.5 h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                    <path d="M10.75 4.75a.75.75 0 00-1.5 0v4.5h-4.5a.75.75 0 000 1.5h4.5v4.5a.75.75 0 001.5 0v-4.5h4.5a.75.75 0 000-1.5h-4.5v-4.5z" />
                </svg>
                {{ t("tickets.new_ticket") }}
            </a>
        </div>
    </div>

    <!-- Filters -->
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow mb-6">
        <div class="p-4">
            <form method="get" action="/agent/tickets" class="space-y-4 sm:space-y-0 sm:flex sm:items-center sm:space-x-4">
                <!-- Search -->
                <div class="flex-1">
                    <input type="text" name="search" value="{{ CurrentFilters.search }}"
                           placeholder="Search by ticket number, title, or customer..."
                           class="w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg dark:bg-gray-700 dark:text-white">
                </div>

                <!-- Status Filter -->
                <div>
                    <select name="status" class="px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg dark:bg-gray-700 dark:text-white">
                        <option value="all" {% if CurrentFilters.status == "all" %}selected{% endif %}>All Status</option>
                        <option value="open" {% if CurrentFilters.status == "open" %}selected{% endif %}>Open</option>
                        <option value="pending" {% if CurrentFilters.status == "pending" %}selected{% endif %}>Pending</option>
                        <option value="closed" {% if CurrentFilters.status == "closed" %}selected{% endif %}>Closed</option>
                    </select>
                </div>

                <!-- Queue Filter -->
                <div>
                    <select name="queue" class="px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg dark:bg-gray-700 dark:text-white">
                        <option value="all">All Queues</option>
                        {% for queue in AvailableQueues %}
                        <option value="{{ queue.id }}" {% if CurrentFilters.queue == queue.id %}selected{% endif %}>
                            {{ queue.name }}
                        </option>
                        {% endfor %}
                    </select>
                </div>

                <!-- Assignee Filter -->
                <div>
                    <select name="assignee" class="px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg dark:bg-gray-700 dark:text-white">
                        <option value="all" {% if CurrentFilters.assignee == "all" %}selected{% endif %}>All Tickets</option>
                        <option value="me" {% if CurrentFilters.assignee == "me" %}selected{% endif %}>My Tickets</option>
                        <option value="unassigned" {% if CurrentFilters.assignee == "unassigned" %}selected{% endif %}>Unassigned</option>
                    </select>
                </div>

                <!-- Buttons -->
                <div class="flex space-x-2">
                    <button type="submit" class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700">
                        Filter
                    </button>
                    <a href="/agent/tickets" class="px-4 py-2 bg-gray-200 dark:bg-gray-700 text-gray-900 dark:text-white rounded-lg hover:bg-gray-300 dark:hover:bg-gray-600">
                        Clear
                    </a>
                </div>
            </form>
        </div>
    </div>

    <!-- Ticket List -->
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow">
        <div class="overflow-x-auto">
            <table class="w-full">
                <thead class="bg-gray-50 dark:bg-gray-700">
                    <tr>
                        <th class="px-6 py-3 text-left">
                            <input type="checkbox" id="select-all" class="rounded dark:bg-gray-600">
                        </th>
                        <th class="px-6 py-3 text-left">
                            <a href="?sort=tn&order={% if CurrentFilters.sort == 'tn' and CurrentFilters.order == 'asc' %}desc{% else %}asc{% endif %}&{{ request.GET.urlencode }}"
                               class="text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider hover:text-gray-700 dark:hover:text-white">
                                Ticket #
                                {% if CurrentFilters.sort == 'tn' %}
                                    {% if CurrentFilters.order == 'asc' %}↑{% else %}↓{% endif %}
                                {% endif %}
                            </a>
                        </th>
                        <th class="px-6 py-3 text-left">
                            <a href="?sort=title&order={% if CurrentFilters.sort == 'title' and CurrentFilters.order == 'asc' %}desc{% else %}asc{% endif %}&{{ request.GET.urlencode }}"
                               class="text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider hover:text-gray-700 dark:hover:text-white">
                                Title
                                {% if CurrentFilters.sort == 'title' %}
                                    {% if CurrentFilters.order == 'asc' %}↑{% else %}↓{% endif %}
                                {% endif %}
                            </a>
                        </th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">
                            Customer
                        </th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">
                            Queue
                        </th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">
                            State
                        </th>
                        <th class="px-6 py-3 text-left">
                            <a href="?sort=priority&order={% if CurrentFilters.sort == 'priority' and CurrentFilters.order == 'asc' %}desc{% else %}asc{% endif %}&{{ request.GET.urlencode }}"
                               class="text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider hover:text-gray-700 dark:hover:text-white">
                                Priority
                                {% if CurrentFilters.sort == 'priority' %}
                                    {% if CurrentFilters.order == 'asc' %}↑{% else %}↓{% endif %}
                                {% endif %}
                            </a>
                        </th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">
                            Assigned
                        </th>
                        <th class="px-6 py-3 text-left">
                            <a href="?sort=create_time&order={% if CurrentFilters.sort == 'create_time' and CurrentFilters.order == 'asc' %}desc{% else %}asc{% endif %}&{{ request.GET.urlencode }}"
                               class="text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider hover:text-gray-700 dark:hover:text-white">
                                Age
                                {% if CurrentFilters.sort == 'create_time' %}
                                    {% if CurrentFilters.order == 'asc' %}↑{% else %}↓{% endif %}
                                {% endif %}
                            </a>
                        </th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">
                            Articles
                        </th>
                        <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">
                            Actions
                        </th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-200 dark:divide-gray-700">
                    {% for ticket in Tickets %}
                    <tr class="hover:bg-gray-50 dark:hover:bg-gray-700">
                        <td class="px-6 py-4">
                            <input type="checkbox" class="ticket-select rounded dark:bg-gray-600" value="{{ ticket.id }}">
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap">
							<a href="/ticket/{{ ticket.tn }}" class="text-blue-600 hover:text-blue-700 dark:text-blue-400 font-medium">
                                #{{ ticket.tn }}
                            </a>
                        </td>
                        <td class="px-6 py-4">
                            <div class="text-sm text-gray-900 dark:text-white truncate max-w-xs" title="{{ ticket.title }}">
                                {{ ticket.title }}
                            </div>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            <div class="text-sm text-gray-900 dark:text-white">
                                {{ ticket.customer|default:"-" }}
                            </div>
                            {% if ticket.company %}
                            <div class="text-xs text-gray-500 dark:text-gray-400">
                                {{ ticket.company }}
                            </div>
                            {% endif %}
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 dark:text-white">
                            {{ ticket.queue }}
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full 
                                {% if 'new' in ticket.state|lower %}bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-200{% endif %}
                                {% if 'open' in ticket.state|lower %}bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-200{% endif %}
                                {% if 'pending' in ticket.state|lower %}bg-yellow-100 text-yellow-800 dark:bg-yellow-900 dark:text-yellow-200{% endif %}
                                {% if 'closed' in ticket.state|lower %}bg-gray-100 text-gray-800 dark:bg-gray-700 dark:text-gray-300{% endif %}
                                {% if 'merged' in ticket.state|lower %}bg-purple-100 text-purple-800 dark:bg-purple-900 dark:text-purple-200{% endif %}">
                                {{ ticket.state }}
                            </span>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            <span class="text-sm font-medium" {% if ticket.priority_color %}style="color: {{ ticket.priority_color }}"{% endif %}>
                                {{ ticket.priority }}
                            </span>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 dark:text-white">
                            {{ ticket.assigned_to|default:"Unassigned" }}
                        </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 dark:text-gray-400">
                                    {% if ticket.created_at_iso %}<span data-relative-time data-mode="since" data-direction="past" data-timestamp="{{ ticket.created_at_iso }}">{{ ticket.age }}</span>{% else %}{{ ticket.age }}{% endif %}
                                </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 dark:text-gray-400 text-center">
                            {{ ticket.article_count }}
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                            <div class="flex items-center justify-end space-x-2">
                                <button onclick="quickAssign({{ ticket.id }})" title="Quick Assign"
                                        class="text-blue-600 hover:text-blue-700 dark:text-blue-400">
                                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                                    </svg>
                                </button>
                                <button onclick="quickReply({{ ticket.id }})" title="Quick Reply"
                                        class="text-green-600 hover:text-green-700 dark:text-green-400">
                                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h10a8 8 0 018 8v2M3 10l6 6m-6-6l6-6"></path>
                                    </svg>
                                </button>
								<a href="/ticket/{{ ticket.tn }}" title="View Details"
                                   class="text-gray-600 hover:text-gray-700 dark:text-gray-400">
                                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                                    </svg>
                                </a>
                            </div>
                        </td>
                    </tr>
                    {% empty %}
                    <tr>
                        <td colspan="11" class="px-6 py-8 text-center text-gray-500 dark:text-gray-400">
                            No tickets found matching your criteria
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>

        <!-- Bulk Actions -->
        {% if Tickets %}
        <div class="px-6 py-3 bg-gray-50 dark:bg-gray-700 border-t border-gray-200 dark:border-gray-600">
            <div class="flex items-center justify-between">
                <div class="flex items-center space-x-3">
                    <span class="text-sm text-gray-700 dark:text-gray-300">
                        With selected:
                    </span>
                    <button onclick="bulkAssign()" class="text-sm text-blue-600 hover:text-blue-700 dark:text-blue-400">
                        Assign
                    </button>
                    <button onclick="bulkChangeStatus()" class="text-sm text-green-600 hover:text-green-700 dark:text-green-400">
                        Change Status
                    </button>
                    <button onclick="bulkChangePriority()" class="text-sm text-orange-600 hover:text-orange-700 dark:text-orange-400">
                        Change Priority
                    </button>
                    <button onclick="bulkMerge()" class="text-sm text-purple-600 hover:text-purple-700 dark:text-purple-400">
                        Merge
                    </button>
                </div>
                <div class="text-sm text-gray-500 dark:text-gray-400">
                    Showing {{ Tickets|length }} tickets
                </div>
            </div>
        </div>
        {% endif %}
    </div>
</div>

<script>
// Select all checkbox
document.getElementById('select-all').addEventListener('change', function() {
    const checkboxes = document.querySelectorAll('.ticket-select');
    checkboxes.forEach(cb => cb.checked = this.checked);
});

// Quick actions
function quickAssign(ticketId) {
    // TODO: Show assign modal
    alert('Assign ticket ' + ticketId);
}

function quickReply(ticketId) {
    // TODO: Show reply modal
    alert('Reply to ticket ' + ticketId);
}

// Bulk actions
function getSelectedTickets() {
    const selected = [];
    document.querySelectorAll('.ticket-select:checked').forEach(cb => {
        selected.push(cb.value);
    });
    return selected;
}

function bulkAssign() {
    const tickets = getSelectedTickets();
    if (tickets.length === 0) {
        alert('Please select at least one ticket');
        return;
    }
    // TODO: Show bulk assign modal
    alert('Assign ' + tickets.length + ' tickets');
}

function bulkChangeStatus() {
    const tickets = getSelectedTickets();
    if (tickets.length === 0) {
        alert('Please select at least one ticket');
        return;
    }
    // TODO: Show bulk status modal
    alert('Change status for ' + tickets.length + ' tickets');
}

function bulkChangePriority() {
    const tickets = getSelectedTickets();
    if (tickets.length === 0) {
        alert('Please select at least one ticket');
        return;
    }
    // TODO: Show bulk priority modal
    alert('Change priority for ' + tickets.length + ' tickets');
}

function bulkMerge() {
    const tickets = getSelectedTickets();
    if (tickets.length < 2) {
        alert('Please select at least two tickets to merge');
        return;
    }
    // TODO: Show merge modal
    alert('Merge ' + tickets.length + ' tickets');
}
</script>
{% endblock %}