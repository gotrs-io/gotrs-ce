{% extends "layouts/base.pongo2" %}

{% block title %}{{ t("dynamic_test.title")|default:"Dynamic Module Testing" }} - Side by Side Comparison{% endblock %}

{% block content %}
<div class="container mx-auto px-4 py-8 min-h-screen">
    <!-- Header -->
    <div class="mb-8">
        <h1 class="text-3xl font-bold gk-heading">
            <span class="gk-text-gradient">{{ t("dynamic_test.heading")|default:"Dynamic Module Testing" }}</span>
        </h1>
        <p class="mt-2 text-sm" style="color: var(--gk-text-muted);">
            Compare static and dynamic module implementations side by side
        </p>
    </div>

    <!-- Test Instructions -->
    <div class="gk-card-glow rounded-lg p-4 mb-8" style="border-left: 4px solid var(--gk-primary);">
        <div class="flex">
            <div class="flex-shrink-0">
                <svg class="h-5 w-5" style="color: var(--gk-primary);" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
                </svg>
            </div>
            <div class="ml-3">
                <h3 class="text-sm font-medium" style="color: var(--gk-text-primary);">{{ t("dynamic_test.testing_instructions")|default:"Testing Instructions" }}</h3>
                <div class="mt-2 text-sm" style="color: var(--gk-text-secondary);">
                    <ul class="list-disc pl-5 space-y-1">
                        <li>Open static and dynamic versions in separate tabs</li>
                        <li>Test all CRUD operations (Create, Read, Update, Delete)</li>
                        <li>Verify search, filters, and sorting work identically</li>
                        <li>Check modal dialogs and form validation</li>
                        <li>Ensure theme works in both versions</li>
                        <li>Test CSV import/export if available</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <!-- Module Comparison Table -->
    <div class="gk-card-glow rounded-lg overflow-hidden">
        <div class="px-6 py-4" style="border-bottom: 1px solid var(--gk-border);">
            <h3 class="text-lg font-medium" style="color: var(--gk-text-primary);">
                Available Modules for Testing
            </h3>
        </div>
        <div class="overflow-x-auto">
            <table class="gk-table">
                <thead>
                    <tr>
                        <th>Module</th>
                        <th>Static Version</th>
                        <th>Dynamic Alias</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for module in Modules %}
                    <tr class="transition-colors hover:bg-white/5">
                        <td>
                            <span class="font-medium" style="color: var(--gk-text-primary);">
                                {{ module.name|title }}
                            </span>
                        </td>
                        <td>
                            {% if module.has_static %}
                            <a href="{{ module.static_url }}"
                               target="_blank"
                               class="hover:underline"
                               style="color: var(--gk-primary);">
                                {{ module.static_url }}
                            </a>
                            {% else %}
                            <span style="color: var(--gk-text-muted);">Not implemented</span>
                            {% endif %}
                        </td>
                        <td>
                            {% if module.has_friendly %}
                            <a href="{{ module.friendly_url }}"
                               target="_blank"
                               class="hover:underline"
                               style="color: var(--gk-success);">
                                {{ module.friendly_url }}
                            </a>
                            {% else %}
                            <span style="color: var(--gk-text-muted);">Alias pending</span>
                            {% endif %}
                        </td>
                        <td>
                            {% if module.has_static %}
                            <span class="gk-badge gk-badge-warning">Ready for comparison</span>
                            {% else %}
                            <span class="gk-badge gk-badge-success">Dynamic only</span>
                            {% endif %}
                        </td>
                        <td class="text-sm">
                            {% if module.has_static %}
                            <button onclick="runComparison('{{ module.name }}')"
                                    class="mr-3 hover:underline"
                                    style="color: var(--gk-accent);">
                                Run Tests
                            </button>
                            {% endif %}
                            {% if module.has_friendly %}
                            <button onclick="openSideBySide('{{ module.name }}', '{{ module.friendly_url|escapejs }}', {% if module.has_static %}true{% else %}false{% endif %})"
                                    class="hover:underline"
                                    style="color: var(--gk-primary);">
                                Open Side by Side
                            </button>
                            {% else %}
                            <span style="color: var(--gk-text-muted);">Side-by-side unavailable</span>
                            {% endif %}
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

    <!-- Test Results Section -->
    <div class="mt-8 gk-card-glow rounded-lg hidden" id="test-results">
        <div class="px-6 py-4" style="border-bottom: 1px solid var(--gk-border);">
            <h3 class="text-lg font-medium" style="color: var(--gk-text-primary);">
                Test Results
            </h3>
        </div>
        <div class="px-6 py-4">
            <div id="test-output" class="space-y-2"></div>
        </div>
    </div>
</div>

<script>
function openSideBySide(module, friendlyUrl, hasStatic) {
    if (!friendlyUrl) {
        alert('Dynamic alias not available yet for ' + module);
        return;
    }
    const width = window.screen.width;
    const height = window.screen.height;
    const halfWidth = Math.floor(width / 2);

    // Open dynamic version on the right
    const dynamicWindow = window.open(
        friendlyUrl,
        `dynamic_${module}`,
        `width=${halfWidth},height=${height},left=${halfWidth},top=0`
    );

    // Open static version on the left if it exists
    if (hasStatic) {
        const staticWindow = window.open(
            `/admin/${module}`,
            `static_${module}`,
            `width=${halfWidth},height=${height},left=0,top=0`
        );
    }
}

function runComparison(module) {
    const resultsDiv = document.getElementById('test-results');
    const outputDiv = document.getElementById('test-output');

    resultsDiv.classList.remove('hidden');
    outputDiv.innerHTML = '<div style="color: var(--gk-text-muted);">Running automated tests...</div>';

    // This is where Playwright tests would be triggered
    // For now, show manual test checklist
    const tests = [
        'List view renders correctly',
        'Search functionality works',
        'Sorting columns works',
        'Create new item works',
        'Edit existing item works',
        'Delete/deactivate item works',
        'Modal dialogs work',
        'Theme works correctly',
        'Form validation works',
        'Pagination works'
    ];

    outputDiv.innerHTML = `
        <div class="space-y-2">
            <div class="font-medium" style="color: var(--gk-text-primary);">Manual Test Checklist for ${module}:</div>
            ${tests.map(test => `
                <label class="flex items-center space-x-3">
                    <input type="checkbox" class="h-4 w-4 rounded focus:ring-2" style="accent-color: var(--gk-primary); border-color: var(--gk-border);">
                    <span class="text-sm" style="color: var(--gk-text-secondary);">${test}</span>
                </label>
            `).join('')}
            <div class="mt-4 pt-4" style="border-top: 1px solid var(--gk-border);">
                <button onclick="saveTestResults('${module}')" class="gk-btn-neon">
                    Save Test Results
                </button>
            </div>
        </div>
    `;
}

function saveTestResults(module) {
    const checkboxes = document.querySelectorAll('#test-output input[type="checkbox"]');
    const results = Array.from(checkboxes).map(cb => cb.checked);
    const passed = results.filter(r => r).length;
    const total = results.length;

    alert(`Test results for ${module}: ${passed}/${total} tests passed`);
}
</script>
{% endblock %}
