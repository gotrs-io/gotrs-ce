{# Floating Bulk Actions Bar Partial with Synthwave Styling #}
{# Appears when tickets are selected - controlled by JavaScript #}

<div id="floating-bulk-actions" class="fixed bottom-0 left-0 right-0 z-50 transform translate-y-full transition-transform duration-300 ease-in-out">
    <div class="shadow-lg" style="background: var(--gk-bg-elevated); border-top: 1px solid var(--gk-border-strong);">
        <div class="container mx-auto px-4 py-3">
            <div class="flex items-center justify-between">
                <div class="flex items-center space-x-4">
                    <span id="floating-selected-count" class="text-sm font-medium" style="color: var(--gk-text-primary);">
                        <span class="inline-flex items-center justify-center w-6 h-6 rounded-full mr-2" style="background: var(--gk-primary); box-shadow: var(--gk-glow-primary);">0</span>
                        <span data-singular="{{ t("tickets.ticket_selected")|default:"ticket selected" }}" data-plural="{{ t("tickets.tickets_selected")|default:"tickets selected" }}">{{ t("tickets.tickets_selected")|default:"tickets selected" }}</span>
                    </span>
                    <div class="h-6 w-px" style="background: var(--gk-border-strong);"></div>

                    <!-- Assign Button -->
                    <button onclick="bulkAssign()" class="gk-btn-neon inline-flex items-center px-3 py-1.5 text-sm">
                        <svg class="w-4 h-4 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                        </svg>
                        {{ t("tickets.assign")|default:"Assign" }}
                    </button>

                    <!-- Status Button -->
                    <button onclick="bulkChangeStatus()" class="inline-flex items-center px-3 py-1.5 text-sm font-medium rounded-md transition-colors" style="background: var(--gk-success); color: var(--gk-text-inverse);" onmouseover="this.style.boxShadow='var(--gk-glow-success)'" onmouseout="this.style.boxShadow='none'">
                        <svg class="w-4 h-4 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                        {{ t("tickets.change_status")|default:"Change Status" }}
                    </button>

                    <!-- Priority Button -->
                    <button onclick="bulkChangePriority()" class="inline-flex items-center px-3 py-1.5 text-sm font-medium rounded-md transition-colors" style="background: var(--gk-tertiary); color: var(--gk-text-inverse);" onmouseover="this.style.boxShadow='0 0 15px rgba(255, 138, 61, 0.5)'" onmouseout="this.style.boxShadow='none'">
                        <svg class="w-4 h-4 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 4h13M3 8h9m-9 4h6m4 0l4-4m0 0l4 4m-4-4v12"></path>
                        </svg>
                        {{ t("tickets.change_priority")|default:"Change Priority" }}
                    </button>

                    <!-- Merge Button -->
                    <button onclick="bulkMerge()" class="inline-flex items-center px-3 py-1.5 text-sm font-medium rounded-md transition-colors" style="background: var(--gk-secondary); color: var(--gk-text-inverse);" onmouseover="this.style.boxShadow='var(--gk-glow-secondary)'" onmouseout="this.style.boxShadow='none'">
                        <svg class="w-4 h-4 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
                        </svg>
                        {{ t("tickets.merge")|default:"Merge" }}
                    </button>
                </div>

                <!-- Clear Selection -->
                <button onclick="clearAllSelections()" class="text-sm transition-colors" style="color: var(--gk-text-muted);" onmouseover="this.style.color='var(--gk-primary)'" onmouseout="this.style.color='var(--gk-text-muted)'">
                    {{ t("tickets.clear_selection")|default:"Clear selection" }}
                </button>
            </div>
        </div>
    </div>
</div>
